            </CheckBox>
            <CheckBox Style="{StaticResource CheckBox}" x:Name="SortTags" IsChecked="{mui:Stored batch.addTag.sort}">
              <Label Content="Sort tags" />
            </CheckBox>
          </mui:SpacingUniformGrid>
        </mui:SpacingStackPanel>
      </ControlTemplate>
    </c:BatchActionParams>
    <c:BatchActionParams x:Key="Batch.FixFormats" DisplayName="Fix Specs Formats" Group="UI" Action="Batch_FixFormats_OnAction" Template="{x:Null}"
