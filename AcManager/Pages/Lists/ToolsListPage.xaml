<UserControl x:Class="AcManager.Pages.Lists.ToolsListPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:lists="clr-namespace:AcManager.Pages.Lists" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300">
    <ItemsControl Margin="{StaticResource ContentMarginWithPadding}">
        <ItemsControl.Template>
            <ControlTemplate TargetType="ItemsControl">
                <ScrollViewer x:Name="PART_ScrollViewer" Padding="{TemplateBinding Padding}" Focusable="False" CanContentScroll="True"
                        HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                </ScrollViewer>
            </ControlTemplate>
        </ItemsControl.Template>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="lists:ToolLink">
                <Border Background="#aa000000" TextBlock.Foreground="White" Padding="20" Margin="20">
                    <DockPanel VerticalAlignment="Center">
                        <Path Fill="White" Width="32" Height="32" Margin="0 0 0 20" HorizontalAlignment="Center" DockPanel.Dock="Top" Stretch="Uniform"
                                Data="{Binding Icon}" />
                        <TextBlock Text="{Binding DisplayName, Converter={StaticResource ToTitleConverter}}" Style="{StaticResource Heading2}"
                                Foreground="{DynamicResource Accent}" Margin="0 0 0 8" TextAlignment="Center" DockPanel.Dock="Top" />
                        <TextBlock Text="{Binding Description}" Style="{StaticResource Small}" Margin="0 0 0 20" TextAlignment="Left" DockPanel.Dock="Top"
                                TextWrapping="Wrap" />
                        <Button Command="{Binding LaunchCommand}" Content="Launch" />
                    </DockPanel>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel ItemWidth="360" ItemHeight="240" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.Items>
            <lists:FilteredToolLink DisplayName="Migration Helper (Data &amp; Models)" Source="/Pages/ContentTools/MigrationHelper.xaml?Models=True"
                    Icon="F1 M 52.2573,19.0027L 38.0053,33.2546L 50.6737,33.2546L 25.3369,57.008L 35.4716,38.0053L 23.7533,38.0053L 36.4217,19.0027L 52.2573,19.0027 Z"
                    LocationSizeKey="lsMigrationHelper" DefaultFilter="!author:kunos">
                <lists:FilteredToolLink.FilterDescription>Would you like to specify which cars should be scanned using filter?</lists:FilteredToolLink.FilterDescription>
                <lists:ToolLink.Description>Upgrade some aspects of installed cars to match new AC standarts! Data and resources will be checked.</lists:ToolLink.Description>
            </lists:FilteredToolLink>
            <lists:FilteredToolLink DisplayName="Migration Helper (Data Only)" Source="/Pages/ContentTools/MigrationHelper.xaml?Models=False"
                    Icon="F1 M 52.2573,19.0027L 38.0053,33.2546L 50.6737,33.2546L 25.3369,57.008L 35.4716,38.0053L 23.7533,38.0053L 36.4217,19.0027L 52.2573,19.0027 Z"
                    LocationSizeKey="lsMigrationHelper" DefaultFilter="!author:kunos">
                <lists:FilteredToolLink.FilterDescription>Would you like to specify which cars should be scanned using filter?</lists:FilteredToolLink.FilterDescription>
                <lists:ToolLink.Description>Upgrade some aspects of installed cars to match new AC standarts! Only data will be checked, much faster.</lists:ToolLink.Description>
            </lists:FilteredToolLink>
        </ItemsControl.Items>
    </ItemsControl>
</UserControl>
