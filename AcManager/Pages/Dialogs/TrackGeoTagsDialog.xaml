<mui:ModernDialog x:Class="AcManager.Pages.Dialogs.TrackGeoTagsDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" Title="{Binding SelectedTrack.DisplayName, Mode=OneTime}" MaxWidth="900" MaxHeight="900">

    <StackPanel Orientation="Vertical">

        <Grid Margin="0 10 10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="160" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="Latitude:" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelWithPadding}" ToolTip="Recommended format: '…° N' or '…° S'" />
            <TextBlock Text="Longitude:" Grid.Column="2" Grid.Row="0" Style="{StaticResource LabelWithPadding}" ToolTip="Recommended format: '…° W' or '…° E'" />

            <TextBox Text="{Binding Latitude}" Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBoxAsTextBlock}" />
            <TextBox Text="{Binding Longitude}" Grid.Column="3" Grid.Row="0" Style="{StaticResource TextBoxAsTextBlock}" />
        </Grid>

        <!--<CheckBox IsChecked="{Binding SetAutomatically}">
            <Label>_Automatically set coordinates from maps</Label>
        </CheckBox>-->
        
        <!-- TODO -->

        <WebBrowser Name="MapWebBrowser" Width="760" Height="640" Navigating="MapWebBrowser_OnNavigating" />
    </StackPanel>

</mui:ModernDialog>
