<mui:ModernDialog x:Class="AcManager.Pages.Dialogs.ImageEditor" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:g="clr-namespace:AcManager" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
        Title="{x:Static g:AppStrings.CropImage_Title}" MouseLeave="OnMouseLeave" MouseMove="OnMouseMove" MouseUp="OnMouseUp" MouseWheel="OnMouseWheel">
    <Grid x:Name="MainGrid" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="Editor_OnMouseDown" ClipToBounds="True">
        <Image x:Name="OriginalImage" />
        <Border x:Name="SelectedArea" BorderThickness="1" UseLayoutRounding="False" BorderBrush="LightBlue" Background="#220000FF" HorizontalAlignment="Left"
                VerticalAlignment="Top" SnapsToDevicePixels="True" />
    </Grid>
</mui:ModernDialog>
