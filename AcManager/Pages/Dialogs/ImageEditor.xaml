<mui:ModernDialog x:Class="AcManager.Pages.Dialogs.ImageEditor" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" Title="Crop Image" MouseLeave="Editor_OnMouseLeave" MouseMove="Editor_OnMouseMove" MouseUp="Editor_OnMouseUp"
        MouseWheel="Editor_OnMouseWheel">

    <Grid Name="MainGrid" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="Editor_OnMouseDown" ClipToBounds="True">
        <Image Name="OriginalImage" />
        <Border Name="SelectedArea" BorderThickness="1" UseLayoutRounding="False" BorderBrush="LightBlue" Background="#220000FF" HorizontalAlignment="Left" VerticalAlignment="Top" SnapsToDevicePixels="True" />
    </Grid>
</mui:ModernDialog>
