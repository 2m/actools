<mui:ModernDialog x:Class="AcManager.Pages.Dialogs.PackServerDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
    xmlns:dialogs="clr-namespace:AcManager.Pages.Dialogs" xmlns:c="http://acstuff.ru/app/controls" mc:Ignorable="d"
    Title="{Binding Server.DisplayName, StringFormat='{}Pack {0}'}" d:DataContext="{d:DesignInstance dialogs:PackServerDialog+ViewModel}">

  <mui:SpacingStackPanel Spacing="8" Orientation="Vertical">
    <c:PropertiesGrid VerticalSpacing="8" Columns="2" VerticalAlignment="Top" WithoutMarginForEmptyLabels="True">
      <mui:BetterComboBox c:PropertiesGrid.Label="Target:" IsEditable="False" ItemsSource="{Binding Modes}" SelectedItem="{Binding Mode}" />

      <CheckBox IsChecked="{Binding IncludeExecutable}" VerticalAlignment="Center" Margin="0 -2 0 2">
        <Label Content="Include executable" />
      </CheckBox>

      <CheckBox IsChecked="{Binding PackIntoSingle}" VerticalAlignment="Center" Margin="0 -2 0 2"
          IsEnabled="{Binding Mode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static dialogs:PackMode.Windows}}"
          ToolTip="Installed and associated with .EVB-files Enigma Virtual Box is required. Only for Windows.">
        <Label>
          <TextBlock Margin="0 -6 0 0">
            <Run Text="Pack into single exe-file" /><Hyperlink Typography.Variants="Superscript" FontSize="11" BaselineAlignment="Superscript"
                                                        Command="{Binding NavigateCommand}" CommandParameter="http://enigmaprotector.com/en/aboutvb.html">[?]</Hyperlink>
          </TextBlock>
        </Label>
      </CheckBox>
    </c:PropertiesGrid>

    <TextBlock Style="{StaticResource Heading2}" Margin="0 12 0 0">
      <Run Text="Wrapper" /><Hyperlink Typography.Variants="Superscript" FontSize="11" BaselineAlignment="Superscript" Command="{Binding NavigateCommand}"
                                CommandParameter="https://github.com/gro-ove/ac-server-wrapper">[?]</Hyperlink><Run Text=":" />
    </TextBlock>

    <!--<c:PropertiesGrid VerticalSpacing="8" Columns="2" VerticalAlignment="Top" WithoutMarginForEmptyLabels="True">
      <CheckBox IsChecked="{Binding IncludeWrapper}" VerticalAlignment="Center" Margin="0 -2 0 2">
        <Label Content="Include wrapper" />
      </CheckBox>

      <CheckBox IsChecked="{Binding IncludeWrapperNodeJs}" VerticalAlignment="Center" Margin="0 -2 0 2">
        <Label Content="Include Node.JS" />
      </CheckBox>
    </c:PropertiesGrid>-->
  </mui:SpacingStackPanel>

  <mui:ModernDialog.ButtonsRowContent>
    <c:UserPresetsControl UserPresetable="{Binding}" />
  </mui:ModernDialog.ButtonsRowContent>
</mui:ModernDialog>