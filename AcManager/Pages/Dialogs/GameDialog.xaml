<mui:ModernDialog x:Class="AcManager.Pages.Dialogs.GameDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:dialogs="clr-namespace:AcManager.Pages.Dialogs" mc:Ignorable="d" Width="540" Height="360" SizeToContent="Manual" Title="{Binding Title}"
        d:DataContext="{d:DesignInstance dialogs:GameDialog+GameDialogViewModel}" ResizeMode="CanResize">
    <mui:ModernDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/AcSpecific.xaml" />
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/IconData.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mui:ModernDialog.Resources>
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"
                Visibility="{Binding CurrentState, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static dialogs:GameDialog+GameDialogViewModel+State.Waiting}}">
            <mui:ModernProgressRing Margin="10" IsActive="True" Width="80" Height="80" Name="ProgressRing" Style="{StaticResource WaveProgressRingStyle}" />
            <TextBlock Text="{Binding WaitingStatus}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"
                Visibility="{Binding CurrentState, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static dialogs:GameDialog+GameDialogViewModel+State.Cancelled}}">
            <TextBlock Text="Race cancelled" Style="{StaticResource Heading1}"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}" />
            <TextBlock Text="{Binding ErrorMessage, StringFormat='{}{0}.'}" Style="{StaticResource Heading1}"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=inverse}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"
                Visibility="{Binding CurrentState, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static dialogs:GameDialog+GameDialogViewModel+State.Error}}">
            <DockPanel Margin="0 0 0 4">
                <Path Data="{StaticResource AlertIconData}" Width="24" Height="24" Fill="{DynamicResource ErrorForeground}" Stretch="Uniform" x:Name="ErrorIcon"
                        DockPanel.Dock="Left" Margin="4" />
                <TextBlock Text="Error:" Style="{StaticResource Heading1}" />
            </DockPanel>
            <TextBlock Text="{Binding ErrorMessage, StringFormat='{}{0}.'}" Margin="0 0 0 12" />
            <TextBlock Text="More information in MainLog.txt." FontStyle="Italic" />
        </StackPanel>

        <Grid
                Visibility="{Binding CurrentState, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static dialogs:GameDialog+GameDialogViewModel+State.Finished}}">
            <ContentControl Content="{Binding FinishedData}">
                <ContentControl.Resources>
                    <!-- drift -->
                    <DataTemplate DataType="{x:Type dialogs:GameDialog+DriftFinishedData}">
                        <Viewbox Stretch="Uniform">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                                    <Grid Width="80">
                                        <Ellipse Style="{StaticResource PlaceMark}" HorizontalAlignment="Right" Margin="0 0 16 0"
                                                Fill="{Binding TakenPlace, Converter={StaticResource PlaceToColorConverter}}" />
                                    </Grid>

                                    <TextBlock Text="{Binding Points}" Style="{StaticResource Heading1}" FontSize="40" />
                                    <TextBlock Text="{Binding Points, Converter={StaticResource PluralizingConverter}, ConverterParameter=' point'}"
                                            Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" TextOptions.TextFormattingMode="Ideal" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                    <TextBlock Text="Max Level: " Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" Width="80"
                                            TextOptions.TextFormattingMode="Ideal" />
                                    <TextBlock Text="{Binding MaxLevel}" Style="{StaticResource Heading1}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Best combo: " Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" Width="80"
                                            TextOptions.TextFormattingMode="Ideal" />
                                    <TextBlock Text="{Binding MaxCombo, StringFormat='{}{0}x'}" Style="{StaticResource Heading1}" />
                                </StackPanel>
                            </StackPanel>
                        </Viewbox>
                    </DataTemplate>

                    <!-- time attack -->
                    <DataTemplate DataType="{x:Type dialogs:GameDialog+TimeAttackFinishedData}">
                        <Viewbox Stretch="Uniform">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                                    <Grid Width="80">
                                        <Ellipse Style="{StaticResource PlaceMark}" HorizontalAlignment="Right" Margin="0 0 16 0"
                                                Fill="{Binding TakenPlace, Converter={StaticResource PlaceToColorConverter}}" />
                                    </Grid>

                                    <TextBlock Text="{Binding Points}" Style="{StaticResource Heading1}" FontSize="40" />
                                    <TextBlock Text="{Binding Points, Converter={StaticResource PluralizingConverter}, ConverterParameter=' point'}"
                                            Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" TextOptions.TextFormattingMode="Ideal" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                    <TextBlock Text="Laps: " Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" Width="80"
                                            TextOptions.TextFormattingMode="Ideal" />
                                    <TextBlock Text="{Binding Laps}" Style="{StaticResource Heading1}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Best lap: " Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" Width="80"
                                            TextOptions.TextFormattingMode="Ideal" />
                                    <TextBlock Text="{Binding BestLapTime, StringFormat='{}{0:mm}:{0:ss}:{0:ff}', TargetNullValue='n/a'}"
                                            Style="{StaticResource Heading1}" />
                                </StackPanel>
                            </StackPanel>
                        </Viewbox>
                    </DataTemplate>

                    <!-- hotlap -->
                    <DataTemplate DataType="{x:Type dialogs:GameDialog+HotlapFinishedData}">
                        <Viewbox Stretch="Uniform">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                                    <Grid Width="80">
                                        <Ellipse Style="{StaticResource PlaceMark}" HorizontalAlignment="Right" Margin="0 0 16 0"
                                                Fill="{Binding TakenPlace, Converter={StaticResource PlaceToColorConverter}}" />
                                    </Grid>

                                    <TextBlock Text="{Binding BestLapTime, StringFormat='{}{0:mm}:{0:ss}:{0:ff}', TargetNullValue='n/a'}"
                                            Style="{StaticResource Heading1}" FontSize="40" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                    <TextBlock Text="Laps: " Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" Width="80"
                                            TextOptions.TextFormattingMode="Ideal" />
                                    <TextBlock Text="{Binding Laps}" Style="{StaticResource Heading1}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Theoretical: " Style="{StaticResource Label}" VerticalAlignment="Bottom" Margin="0 0 0 6" Width="80"
                                            TextOptions.TextFormattingMode="Ideal" />
                                    <TextBlock Text="{Binding TheoreticallLapTime, StringFormat='{}{0:mm}:{0:ss}:{0:ff}', TargetNullValue='n/a'}"
                                            Style="{StaticResource Heading1}" />
                                </StackPanel>
                            </StackPanel>
                        </Viewbox>
                    </DataTemplate>

                    <!-- racing session -->
                    <DataTemplate x:Key="SessionTemplate" DataType="{x:Type dialogs:GameDialog+SessionFinishedData}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0 -8"
                                PreviewMouseWheel="ScrollViewer_OnPreviewMouseWheel">
                            <DataGrid ItemsSource="{Binding PlayerEntries}" Style="{StaticResource DataGrid.ReadOnly}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="40" Header="" Binding="{Binding TakenPlace}" />
                                    <DataGridTemplateColumn Width="1.5*" Header="Name" SortMemberPath="Name"
                                            CellTemplate="{StaticResource DataGridCell.DriverName}" />
                                    <DataGridTemplateColumn Width="2*" Header="Car" SortMemberPath="Car.DisplayName"
                                            CellTemplate="{StaticResource DataGridCell.Car}" />
                                    <DataGridTextColumn Width="120" Header="Best Lap"
                                            Binding="{Binding BestLapTime, StringFormat='{}{0:mm}:{0:ss}:{0:fff}', TargetNullValue='n/a'}" />
                                </DataGrid.Columns>

                                <!--<DataGrid.RowDetailsTemplate>
                                    <DataTemplate DataType="{x:Type dialogs:GameDialog+SessionFinishedData+PlayerEntry}">
                                        <DataGrid ItemsSource="{Binding Laps}"></DataGrid>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>-->
                            </DataGrid>
                        </ScrollViewer>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type dialogs:GameDialog+SessionFinishedData}">
                        <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource SessionTemplate}" />
                    </DataTemplate>

                    <Style x:Key="ModernTabLinkItem" TargetType="ListBoxItem">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="FontFamily" Value="Segoe UI" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
                        <Setter Property="Foreground" Value="{DynamicResource MenuText}" />
                        <Setter Property="Margin" Value="12,0,0,0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter x:Name="Presenter" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Foreground" Value="{DynamicResource MenuTextHover}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="true">
                                            <Setter Property="Foreground" Value="{DynamicResource MenuTextSelected}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <ItemsPanelTemplate x:Key="ModernTabLinkItemPanelTemplate">
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>

                    <DataTemplate x:Key="ModernTabLinkItemPanelDataTemplate">
                        <TextBlock Text="{Binding Title, Converter={StaticResource ToUpperConverter}}" />
                    </DataTemplate>

                    <!-- racing sessions -->
                    <DataTemplate DataType="{x:Type dialogs:GameDialog+SessionsFinishedData}">
                        <Grid>
                            <ContentControl ContentTemplate="{StaticResource SessionTemplate}" Content="{Binding SelectedSession}" />
                            <ListBox ItemsSource="{Binding Sessions}" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                    ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="False" ScrollViewer.PanningMode="Both"
                                    ItemContainerStyle="{StaticResource ModernTabLinkItem}" ItemsPanel="{StaticResource ModernTabLinkItemPanelTemplate}"
                                    ItemTemplate="{StaticResource ModernTabLinkItemPanelDataTemplate}" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                    Margin="0 0 0 -40" SelectedItem="{Binding SelectedSession, Mode=TwoWay}" />
                        </Grid>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</mui:ModernDialog>
