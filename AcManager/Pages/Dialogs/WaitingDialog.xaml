<mui:ModernDialog x:Class="AcManager.Pages.Dialogs.WaitingDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" Width="400" Height="250" SizeToContent="Manual">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <mui:ModernProgressRing Margin="10" IsActive="True" Width="80" Height="80" />
            <TextBlock Text="{Binding Message}" />
        </StackPanel>
    </Grid>
</mui:ModernDialog>
