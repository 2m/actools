<mui:ModernDialog x:Class="AcManager.Pages.Dialogs.VersionInfoEditor" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" Title="Version Info">

    <Grid Margin="0 10 10 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"></ColumnDefinition>
            <ColumnDefinition Width="240"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Author:" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelWithPadding}" />
        <TextBlock Text="Version:" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelWithPadding}" />
        <TextBlock Text="URL:" Grid.Column="0" Grid.Row="2" Style="{StaticResource LabelWithPadding}" />

        <ComboBox Text="{Binding AcObj.Author, Mode=OneWay, TargetNullValue=''}" Name="AuthorInput" Grid.Column="1" Grid.Row="0"
                ItemsSource="{Binding AcObj.AuthorsList}" IsTextSearchEnabled="True" IsEditable="True" Style="{StaticResource ComboBoxAsTextBlock}" />
        <TextBox Text="{Binding AcObj.Version, Mode=OneWay, TargetNullValue=''}" Name="VersionInput" Grid.Column="1" Grid.Row="1"
                Style="{StaticResource TextBoxAsTextBlock}" />
        <TextBox Text="{Binding AcObj.Url, Mode=OneWay, TargetNullValue=''}" Name="UrlInput" Grid.Column="1" Grid.Row="2"
                Style="{StaticResource TextBoxAsTextBlock}" />
    </Grid>

</mui:ModernDialog>
