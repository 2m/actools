<UserControl x:Class="AcManager.Pages.Drive.Online_SelectedServerPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:controls="clr-namespace:AcManager.Controls;assembly=AcManager.Controls" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
        Loaded="Online_SelectedServerPage_OnLoaded" Unloaded="Online_SelectedServerPage_OnUnloaded"
        PreviewMouseDown="Online_SelectedServerPage_OnPreviewMouseDown">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/IconData.xaml" />
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid DataContext="{Binding Entry}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="-8 0 -8 0">
            <Grid Margin="0 0 0 120">
                <!-- error -->
                <StackPanel Visibility="{Binding Status, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Error}">
                    <!-- server's name -->
                    <TextBlock Text="{Binding Name}" Style="{StaticResource Heading2}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />

                    <DockPanel HorizontalAlignment="Stretch" Margin="0 12 0 0">
                        <Path Data="{StaticResource AlertIconData}" Width="16" Height="16" Fill="{DynamicResource Error}" Stretch="Uniform"
                                x:Name="ErrorIcon" DockPanel.Dock="Right" />
                        <TextBlock Text="Errors:" Margin="10 2 2 2" Style="{StaticResource Heading2}" />
                    </DockPanel>

                    <!--<TextBlock Style="{StaticResource Heading1}" Text="Error" />-->
                    <mui:BbCodeBlock BbCode="{Binding ErrorMessage}" Margin="40 0 0 12" />
                    <Button Command="{Binding RefreshCommand}" Content="Try again" Margin="20 0 0 0" />
                </StackPanel>

                <!-- loading -->
                <Grid Visibility="{Binding Status, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Loading}">
                    <mui:ModernProgressRing Margin="10" IsActive="True" Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>

                <!-- content -->
                <StackPanel Visibility="{Binding Status, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Ready}">
                    <!-- server's name -->
                    <TextBox Text="{Binding Name, Mode=OneWay}" Style="{StaticResource TextBoxAsTextBlock.Heading2.ReadOnly}" TextWrapping="NoWrap" />

                    <!-- ip, ping -->
                    <DockPanel Margin="0 4 0 20">
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Ping, TargetNullValue=?}" Style="{StaticResource Small}" />
                            <TextBlock Text=" ms" Opacity="0.5" Style="{StaticResource Small}" />
                        </StackPanel>

                        <TextBox Text="{Binding Ip, Mode=OneWay}" Style="{StaticResource TextBoxAsTextBlock.Small.ReadOnly}" HorizontalAlignment="Left" />
                    </DockPanel>

                    <!-- password -->
                    <Grid Margin="0 0 0 20" Visibility="{Binding PasswordRequired, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0 0 16 0">
                            <Path Data="{StaticResource LockIconData}" Width="16" Height="16" Fill="{DynamicResource WindowText}" Stretch="Uniform"
                                    Visibility="Visible" x:Name="PasswordIcon" HorizontalAlignment="Left" ToolTip="Password required" Margin="10 2 2 2" />
                            <TextBlock Text="Password:" Style="{StaticResource Heading2}" />
                        </StackPanel>

                        <DockPanel Grid.Column="1">
                            <Path Data="{StaticResource AlertIconData}" Width="16" Height="16" Fill="{DynamicResource Error}" Stretch="Uniform"
                                    DockPanel.Dock="Right" Visibility="{Binding WrongPassword, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <mui:ProperPasswordBox Password="{Binding Password, Mode=TwoWay}" Style="{StaticResource ProperPasswordBoxAsTextBlock}" />
                        </DockPanel>
                    </Grid>

                    <!-- track & car -->
                    <Grid Margin="0 0 0 20" Height="160">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid ClipToBounds="True" Background="Gray" DataContext="{Binding Track}">
                            <Image Source="{Binding PreviewImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}" Stretch="UniformToFill"
                                    RenderOptions.BitmapScalingMode="HighQuality" />
                            <Image Source="{Binding OutlineImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}" Stretch="Uniform"
                                    RenderOptions.BitmapScalingMode="HighQuality" />
                            <TextBlock Padding="4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="#88555555" Text="{Binding Name}"
                                    Foreground="White" />
                        </Grid>

                        <Grid ClipToBounds="True" Background="Gray" Grid.Column="2"
                                Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Image DataContext="{Binding CarsView.CurrentItem.AvailableSkin}"
                                    Source="{Binding PreviewImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}" Stretch="UniformToFill"
                                    RenderOptions.BitmapScalingMode="HighQuality" Margin="-25 0 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <Grid Visibility="{Binding CarsView.CurrentItem.AvailableSkin, Converter={StaticResource NullToVisibilityConverter}}"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#111111">
                                <TextBlock Style="{StaticResource Heading1}" Text="Skin is missing" Foreground="#444444" HorizontalAlignment="Center"
                                        VerticalAlignment="Center" Margin="0 0 0 20" />
                            </Grid>
                            <ComboBox ItemsSource="{Binding CarsView}" Background="#88555555" Foreground="White" Padding="4" VerticalAlignment="Bottom"
                                    BorderThickness="0" IsSynchronizedWithCurrentItem="True">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                                        <Setter Property="IsEnabled" Value="{Binding IsAvailable}" />
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                        </Grid>

                        <Grid Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}"
                                Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#111111">
                            <TextBlock Style="{StaticResource Heading1}" Text="All cars are taken" Foreground="#888888" HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center" Margin="4" TextWrapping="Wrap" TextAlignment="Center" />
                        </Grid>
                    </Grid>

                    <Grid Margin="0 0 0 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- first row -->
                        <TextBlock Text="Country:" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelWithPadding}" />
                        <TextBlock Text="Clients:" Grid.Column="2" Grid.Row="0" Style="{StaticResource LabelWithPadding}" ToolTip="Year of production start" />

                        <DockPanel Grid.Column="1" Grid.Row="0">
                            <Image Source="{Binding CountryId, IsAsync=True, Converter={StaticResource CountryIdToImageConverter}}" HorizontalAlignment="Right"
                                    Width="24" Height="16" DockPanel.Dock="Right" RenderOptions.BitmapScalingMode="LowQuality" />
                            <TextBlock Text="{Binding Country}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                        </DockPanel>
                        <TextBlock Text="{Binding DisplayClients}" Grid.Column="3" Grid.Row="0" />

                        <!-- second row -->
                        <TextBlock Text="Time:" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelWithPadding}" />
                        <TextBlock Text="Left:" Grid.Column="2" Grid.Row="1" Style="{StaticResource LabelWithPadding}" ToolTip="Year of production start" />

                        <TextBlock Text="{Binding Time}" Grid.Column="1" Grid.Row="1" />
                        <TextBlock Name="TimeLeftTextBlock" Text="{Binding DisplayTimeLeft}" Grid.Column="3" Grid.Row="1" />
                    </Grid>

                    <!-- sessions list -->
                    <TextBlock Text="Sessions:" Style="{StaticResource LabelWithPadding}" />
                    <ItemsControl ItemsSource="{Binding Sessions}" Margin="20 10 0 20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Name="Main">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Name="TypeText" Text="{Binding DisplayType}" />
                                    <TextBlock Name="DurationText" Text="{Binding DisplayDuration}" Grid.Column="1" />
                                </Grid>

                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter TargetName="TypeText" Property="Foreground" Value="{DynamicResource ItemTextSelected}" />
                                        <Setter TargetName="TypeText" Property="FontWeight" Value="Bold" />
                                        <Setter TargetName="DurationText" Property="Foreground" Value="{DynamicResource ItemTextSelected}" />
                                        <Setter TargetName="DurationText" Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- current drivers list -->
                    <StackPanel Visibility="{Binding CurrentDrivers.Count, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=≠0}"
                            Margin="0 0 0 20">
                        <TextBlock Text="Drivers online:" Style="{StaticResource LabelWithPadding}" />
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="160">
                            <ItemsControl ItemsSource="{Binding CurrentDrivers}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="20 10 0 20">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Width="200">
                                            <Image RenderOptions.BitmapScalingMode="LowQuality"
                                                    Source="{Binding CarSkin.LiveryImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}"
                                                    Width="16" Height="16" Margin="4">
                                                <Image.ToolTip>
                                                    <StackPanel>
                                                        <Image RenderOptions.BitmapScalingMode="LowQuality"
                                                                Source="{Binding CarSkin.PreviewImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}"
                                                                Width="256" Height="144" Margin="4" />
                                                        <TextBlock Text="{Binding CarSkin.DisplayName}" Margin="4" />
                                                    </StackPanel>
                                                </Image.ToolTip>
                                            </Image>

                                            <StackPanel Margin="0 2 0 2">
                                                <TextBlock Text="{Binding Name}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                                                <TextBlock Text="{Binding Car.DisplayName}" Style="{StaticResource Small}" TextWrapping="NoWrap"
                                                        TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <controls:AcToolBar x:Name="ToolBar" IsActive="True" Grid.Row="1" PreviewMouseDown="ToolBar_OnPreviewMouseDown">
            <ToolBar ToolBarTray.IsLocked="True" Band="0" BandIndex="0">
                <Button Content="Refresh" ToolTip="Refresh server information (Ctrl+R)" Command="{Binding RefreshCommand}" />
                <Separator />
                <Button Content="Join" Command="{Binding JoinCommand}" ToolTip="Join server (Ctrl+G)" Style="{StaticResource Go.ToolBarButton}" />
            </ToolBar>
        </controls:AcToolBar>
    </Grid>
</UserControl>
