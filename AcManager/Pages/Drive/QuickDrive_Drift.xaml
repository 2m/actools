<UserControl x:Class="AcManager.Pages.Drive.QuickDrive_Drift" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:dr="clr-namespace:AcManager.Pages.Drive" xmlns:g="clr-namespace:AcManager"
        mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" FocusVisualStyle="{x:Null}" d:DataContext="{d:DesignInstance dr:QuickDrive_Drift+ViewModel}">
    <UserControl.Resources>
        <Thickness x:Key="ElementMargin">0 0 8 16</Thickness>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" Margin="{StaticResource ElementMargin}" Grid.Row="0" Grid.Column="0">
                <CheckBox Margin="8 0 0 0" IsChecked="{Binding Penalties}">
                    <Label Content="{x:Static g:AppStrings.Drive_Penalties}" />
                </CheckBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="{StaticResource ElementMargin}" Grid.Row="0" Grid.Column="1">
                <TextBlock Style="{StaticResource LabelWithPadding}" Text="{x:Static g:AppStrings.Drive_StartFrom}" Margin="0 0 0 4" />
                <ComboBox Margin="4 0 4 0" ItemsSource="{Binding StartTypes}" SelectedItem="{Binding SelectedStartType}" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
