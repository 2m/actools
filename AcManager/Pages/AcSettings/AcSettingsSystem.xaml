<UserControl x:Class="AcManager.Pages.AcSettings.AcSettingsSystem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:acSettings="clr-namespace:AcManager.Pages.AcSettings" xmlns:controls="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" FocusVisualStyle="{x:Null}"
        d:DataContext="{d:DesignInstance acSettings:AcSettingsSystem+AcSystemViewModel}">
    <UserControl.Resources>
        <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/SettingsSpecific.xaml" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Style="{StaticResource SettingsPanel}">
            <DockPanel>
                <mui:ValueLabel Value="{Binding System.SimulationValue}" Postfix="%">Simulation value</mui:ValueLabel>
                <Slider Minimum="0" Maximum="100" Value="{Binding System.SimulationValue}" TickFrequency="10" TickPlacement="BottomRight" />
            </DockPanel>

            <CheckBox IsChecked="{Binding System.DeveloperApps}">
                <Label Content="Developer apps" />
            </CheckBox>
            
            <CheckBox IsChecked="{Binding System.AllowFreeCamera}" ToolTip="Press F7 to toggle free camera mode">
                <Label Content="Allow free camera" />
            </CheckBox>

            <CheckBox IsChecked="{Binding System.Logging}">
                <Label Content="Logging (recommended)" />
            </CheckBox>

            <DockPanel>
                <Label Content="Screenshots format:" />
                <ComboBox ItemsSource="{Binding System.ScreenshotFormats}" SelectedItem="{Binding System.ScreenshotFormat}" DisplayMemberPath="DisplayName" />
            </DockPanel>

            <Grid Margin="0 20 0 8">
                <Rectangle Stroke="{DynamicResource SeparatorBackground}" StrokeThickness="1" StrokeDashArray="4 4" SnapsToDevicePixels="True" />
                <StackPanel Margin="8">
                    <TextBlock Style="{StaticResource Label}" Text="Want the best screenshots quality?" />
                    <TextBlock TextWrapping="Wrap" Text="Switch to BMP, install Magick.NET plugin and don’t forget to enable automatic conversion on Settings/Drive page." />
                </StackPanel>
            </Grid>

            <!--proximity indicator-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="Proximity indicator" />

            <CheckBox IsChecked="{Binding ProximityIndicator.IsEnabled}">
                <Label Content="Show nearest opponents" />
            </CheckBox>

            <!--skidmarks-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="Skidmarks" />

            <DockPanel>
                <mui:ValueLabel Value="{Binding Skidmarks.QuantityMultipler}" Postfix="%">Quantity</mui:ValueLabel>
                <Slider Minimum="0" Maximum="250" Value="{Binding Skidmarks.QuantityMultipler}" TickFrequency="25" TickPlacement="BottomRight" />
            </DockPanel>

            <DockPanel>
                <mui:ValueLabel Value="{Binding Skidmarks.Height}" Postfix=" m" Mode="Number">Height from the ground</mui:ValueLabel>
                <Slider Minimum="0" Maximum="0.04" Value="{Binding Skidmarks.Height}" TickFrequency="0.004" TickPlacement="BottomRight" />
            </DockPanel>

            <!--mirrors-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="Mirrors" />
            
            <DockPanel>
                <mui:ValueLabel Value="{Binding System.MirrorsFieldOfView}" Postfix="°" ToolTip="Default value: 10°">Field of view</mui:ValueLabel>
                <Slider Minimum="5" Maximum="55" Value="{Binding System.MirrorsFieldOfView}" TickFrequency="5" TickPlacement="BottomRight" />
            </DockPanel>
            
            <DockPanel>
                <mui:ValueLabel Value="{Binding System.MirrorsFarPlane}" Postfix=" m" ToolTip="Default value: 400 m">Rendering distance</mui:ValueLabel>
                <Slider Minimum="100" Maximum="1100" Value="{Binding System.MirrorsFarPlane}" TickFrequency="100" TickPlacement="BottomRight" />
            </DockPanel>

            <!--ghost DisplayColor="{Binding AppAppearanceManager.AccentDisplayColor}"  -->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="Ghost car" />

            <DockPanel>
                <Label Content="Color:" />
                <mui:ColorPicker Color="{Binding Ghost.Color}" />
            </DockPanel>

            <DockPanel>
                <mui:ValueLabel Value="{Binding Ghost.MaxMinutesRecording}" Postfix=" min" ToolTip="Default value: 20 min">Recording limit</mui:ValueLabel>
                <Slider Minimum="5" Maximum="45" Value="{Binding Ghost.MaxMinutesRecording}" TickFrequency="5" TickPlacement="BottomRight" />
            </DockPanel>

            <DockPanel>
                <mui:ValueLabel Value="{Binding Ghost.MinDistance}" Postfix=" m" ToolTip="Default value: 10 m">Start showing at</mui:ValueLabel>
                <Slider Minimum="0" Maximum="120" Value="{Binding Ghost.MinDistance}" TickFrequency="12" TickPlacement="BottomRight" />
            </DockPanel>

            <DockPanel>
                <mui:ValueLabel Value="{Binding Ghost.MaxDistance}" Postfix=" m" ToolTip="Default value: 50 m">Max opacity at</mui:ValueLabel>
                <Slider Minimum="0" Maximum="120" Value="{Binding Ghost.MaxDistance}" TickFrequency="12" TickPlacement="BottomRight" />
            </DockPanel>

            <DockPanel>
                <mui:ValueLabel Value="{Binding Ghost.MaxOpacity}" Postfix="%" ToolTip="Default value: 25%">Opacity</mui:ValueLabel>
                <Slider Minimum="0" Maximum="100" Value="{Binding Ghost.MaxOpacity}" TickFrequency="10" TickPlacement="BottomRight" />
            </DockPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
