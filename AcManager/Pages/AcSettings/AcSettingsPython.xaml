<UserControl x:Class="AcManager.Pages.AcSettings.AcSettingsPython" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:acSettings="clr-namespace:AcManager.Pages.AcSettings" xmlns:controls="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        xmlns:networkInformation="clr-namespace:System.Net.NetworkInformation;assembly=System"
        xmlns:objects="clr-namespace:AcManager.Tools.Objects;assembly=AcManager.Tools" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
        FocusVisualStyle="{x:Null}" d:DataContext="{d:DesignInstance acSettings:AcSettingsPython+AcPythonViewModel}" Unloaded="OnUnloaded">
    <UserControl.Resources>
        <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/SettingsSpecific.xaml" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Style="{StaticResource SettingsPanel}">
            <DockPanel>
                <Label>Activated apps:</Label>
                <ListBox Name="EnabledAppsListBox" ItemsSource="{Binding Apps}" SelectionMode="Multiple"
                        SelectionChanged="EnabledAppsListBox_OnSelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource CheckBoxListBoxItem}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Enabled}" Value="False">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="objects:PythonAppObject">
                            <StackPanel IsEnabled="{Binding Enabled}">
                                <TextBlock Text="{Binding DisplayName}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
