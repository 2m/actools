<UserControl x:Class="AcManager.Pages.AcSettings.AcSettingsControls_Wheel_Buttons" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:helpers="clr-namespace:AcManager.Tools.Helpers;assembly=AcManager.Tools" xmlns:c="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        xmlns:attached="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" Unloaded="AcSettingsControls_Wheel_Buttons_OnUnloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/AcSettingsSpecific.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer DataContext="{Binding Source={x:Static helpers:AcSettingsHolder.Controls}}">
        <StackPanel>
            <CheckBox IsChecked="{Binding CombineWithKeyboardInput}" Margin="0 0 0 20">
                <Label Content="Combine with _keyboard" />
            </CheckBox>

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" Text="Shifters:" />
            <ItemsControl ItemsSource="{Binding WheelGearsButtonEntries}" Margin="0 0 20 4" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <CheckBox IsChecked="{Binding WheelUseHShifter}" Margin="0 0 0 8">
                <Label Content="Use _H-shifter" />
            </CheckBox>

            <StackPanel Background="{DynamicResource WindowBackground}" Margin="20 0 20 20" IsEnabled="{Binding WheelUseHShifter}">
                <TextBlock Text="{Binding WheelHShifterDevice.DisplayName, StringFormat='{}Device: {0}', FallbackValue='?'}" Style="{StaticResource Small}"
                        HorizontalAlignment="Left" Margin="4" />
                <ItemsControl ItemsSource="{Binding WheelHShifterButtonEntries}" Margin="4 0 4 4" ItemTemplate="{StaticResource HShifterButtonEntryTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <mui:UniformGridWithOrientation Orientation="Vertical" Rows="4" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>

            <DockPanel Margin="0 0 0 20" ToolTip="Prevents accidental gearshifts due to faulty hardware">
                <mui:ValueLabel Value="{Binding DebouncingInterval}" Postfix="{x:Static c:ControlsStrings.Common_MillisecondsPostfix}" DockPanel.Dock="Left"
                        VerticalAlignment="Center" Width="200" Content="Gear shift debouncing" />
                <Slider Minimum="0" Maximum="250" Value="{Binding DebouncingInterval}" TickFrequency="25" TickPlacement="BottomRight" />
            </DockPanel>

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" Text="Brake balance:" />
            <ItemsControl ItemsSource="{Binding WheelCarBrakeButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" attached:NewMarkService.New="True" Text="Turbo:" />
            <ItemsControl ItemsSource="{Binding WheelCarTurboButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" attached:NewMarkService.New="True" Text="Traction control:" />
            <ItemsControl ItemsSource="{Binding WheelCarTractionControlButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" attached:NewMarkService.New="True" Text="ABS:" />
            <ItemsControl ItemsSource="{Binding WheelCarAbsButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" attached:NewMarkService.New="True" Text="Engine brake:" />
            <ItemsControl ItemsSource="{Binding WheelCarEngineBrakeButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" attached:NewMarkService.New="True" Text="MGU-K:" />
            <ItemsControl ItemsSource="{Binding WheelCarMgukButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" Text="Miscellaneous:" />
            <ItemsControl ItemsSource="{Binding WheelCarButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" Text="View:" />
            <ItemsControl ItemsSource="{Binding WheelViewButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />

            <TextBlock Style="{StaticResource Heading2}" Margin="0 0 0 4" Text="Gestures:" />
            <ItemsControl ItemsSource="{Binding WheelGesturesButtonEntries}" Margin="0 0 20 20" ItemTemplate="{StaticResource ButtonEntryTemplate}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
