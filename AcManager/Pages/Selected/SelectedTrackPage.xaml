<selected:SelectedAcJsonObjectPage x:Class="AcManager.Pages.Selected.SelectedTrackPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:selected="clr-namespace:AcManager.Pages.Selected" xmlns:controls="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        xmlns:watermark="clr-namespace:FirstFloor.ModernUI.Windows.Controls.Watermark;assembly=FirstFloor.ModernUI" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" mui:InputBindingBehavior.PropagateInputBindingsToWindow="True" FocusVisualStyle="{x:Null}"
        d:DataContext="{d:DesignInstance selected:SelectedTrackPage+SelectedTrackPageViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <CollectionViewSource x:Key="QuickDrivePresetsItems" Source="{Binding QuickDrivePresets}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <controls:AcObjectBase AcObject="{Binding SelectedTrackConfiguration}" ShowIcon="False">
        <controls:AcObjectBase.ToolBars>
            <ToolBar ToolBarTray.IsLocked="True" Band="0" BandIndex="0">
                <Button Content="Folder" ToolTip="Open track's folder (Ctrl+F)" Command="{Binding SelectedObject.ViewInExplorerCommand}" />
                <Button Content="Reload" ToolTip="Reload (Ctrl+R)" Command="{Binding SelectedObject.ReloadCommand}" CommandParameter="full" />
                <Separator />
                <mui:ButtonWithComboBox Content="Drive" ButtonToolTip="Use track in a Quick Drive session (Ctrl+G)" Command="{Binding DriveCommand}"
                        PreviewMouseDown="ToolbarButtonQuickDrive_OnPreviewMouseDown" Style="{StaticResource Go.ToolBarButtonWithComboBox}">
                    <mui:ButtonWithComboBox.MenuItems>
                        <CompositeCollection>
                            <CollectionContainer Collection="{Binding Source={StaticResource QuickDrivePresetsItems}}" />
                        </CompositeCollection>
                    </mui:ButtonWithComboBox.MenuItems>
                </mui:ButtonWithComboBox>
                <Separator />
                <Button Content="Analyze" IsEnabled="False" />
            </ToolBar>
            <ToolBar Band="1" BandIndex="1">
                <Button Content="Disable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Disable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="Enable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Enable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}" />
                <Button Content="Save" Command="{Binding SelectedObject.SaveCommand}" ToolTip="Save changed json-file (Ctrl+S)" />
                <Button Content="Delete" Command="{Binding SelectedObject.DeleteCommand}" ToolTip="Remove object to Recycle Bin (Ctrl+Delete)" />
                <Separator />
                <Button Content="Find Information" Command="{Binding FindInformationCommand}" ToolTip="Find information about track (Ctrl+I)" />
                <Button Content="Copy Values" ToolTip="Copy values to other layouts" IsEnabled="False"
                        Visibility="{Binding SelectedObject.MultiLayoutMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Separator />
                <mui:ButtonWithComboBox Content="Update Preview" Command="{Binding UpdatePreviewCommand}" ButtonToolTip="Update preview (Ctrl+P)">
                    <MenuItem Header="Without Shooting" ToolTip="Just select existing image" InputGestureText="Ctrl+Alt+P"
                            Command="{Binding UpdatePreviewDirectCommand}" />
                </mui:ButtonWithComboBox>
                <Button Content="Update Map" IsEnabled="False" />
            </ToolBar>
        </controls:AcObjectBase.ToolBars>

        <StackPanel>
            <!-- layouts, previews -->
            <Grid Margin="0 0 0 12" MaxHeight="512">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Name="SelectedTrackConfigurationPreview">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid MaxWidth="355">
                        <Image RenderOptions.BitmapScalingMode="LowQuality" StretchDirection="DownOnly"
                                Source="{Binding SelectedTrackConfiguration.PreviewImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}" />
                        <Image RenderOptions.BitmapScalingMode="LowQuality" StretchDirection="DownOnly"
                                Source="{Binding SelectedTrackConfiguration.OutlineImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}" />
                    </Grid>

                    <TextBox Grid.Row="1" Visibility="{Binding SelectedObject.MultiLayoutMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource TextBoxAsTextBlock}" Margin="8 8 0 0" Text="{Binding SelectedTrackConfiguration.LayoutName}"
                            mui:FocusAdvancement.AdvancesByEnterKey="True" />
                </Grid>

                <ListBox Visibility="{Binding SelectedObject.MultiLayoutMode, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Column="1"
                        ItemsSource="{Binding SelectedObject.MultiLayouts}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="180"
                        SelectedItem="{Binding SelectedTrackConfiguration}" Height="{Binding ElementName=SelectedTrackConfigurationPreview, Path=ActualHeight,
                                            Converter={StaticResource SumConverter}, ConverterParameter=4}" Margin="4 -2 0 -2">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- using Name instead of DisplayName, because Display Name of main track layout contains number of layouts -->
                            <Image RenderOptions.BitmapScalingMode="LowQuality"
                                    Source="{Binding OutlineImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}" Width="80" Height="60"
                                    ToolTip="{Binding Name}" Stretch="Uniform" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- data section -->
            <StackPanel Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityConverter}}"
                    DataContext="{Binding SelectedTrackConfiguration}">
                <!-- tags -->
                <mui:TagsList ItemsSource="{Binding Tags}" SuggestionsSource="{Binding TagsList}" MouseDown="TagsList_OnMouseDown" />

                <Grid Margin="0 8 8 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- first row -->
                    <TextBlock Text="Country:" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelWithPadding}" />
                    <TextBlock Text="Year:" Grid.Column="2" Grid.Row="0" Style="{StaticResource LabelWithPadding}" ToolTip="Year of production start" />

                    <ComboBox Text="{Binding Country}" Grid.Column="1" Grid.Row="0" ItemsSource="{Binding CountriesList}" IsTextSearchEnabled="True"
                            IsEditable="True" Style="{StaticResource ComboBoxAsTextBlock}" mui:FocusAdvancement.AdvancesByEnterKey="True"
                            watermark:WatermarkService.Watermark="?" />
                    <TextBox Text="{Binding Year, TargetNullValue=''}" Grid.Column="3" Grid.Row="0" Style="{StaticResource TextBoxAsTextBlock}"
                            mui:FocusAdvancement.AdvancesByEnterKey="True" mui:TextBoxAdvancement.SpecialMode="Integer" watermark:WatermarkService.Watermark="?" />

                    <!-- second row -->
                    <TextBlock Text="City:" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelWithPadding}" />
                    <TextBlock Text="Author:" Grid.Column="2" Grid.Row="1" Style="{StaticResource LabelWithPadding}" ToolTip="Author/version, url" />

                    <ComboBox Text="{Binding City}" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding CitiesList}" IsTextSearchEnabled="True" IsEditable="True"
                            Style="{StaticResource ComboBoxAsTextBlock}" mui:FocusAdvancement.AdvancesByEnterKey="True" watermark:WatermarkService.Watermark="?" />
                    <mui:BbCodeBlock BbCode="{Binding VersionInfoDisplay}" MouseDown="VersionInfoBlock_OnMouseDown" watermark:WatermarkService.Watermark="?"
                            Grid.Column="3" Grid.Row="1" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />

                    <!-- third row -->
                    <TextBlock Text="Geo Tags:" Grid.Column="0" Grid.Row="2" Style="{StaticResource LabelWithPadding}" />
                    <TextBlock Grid.Column="1" Grid.Row="2" MouseDown="GeoTags_KeyDown" Text="{Binding GeoTags}" watermark:WatermarkService.Watermark="?"
                            TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />

                    <!-- last row -->
                    <TextBlock Text="Specs:" Grid.Column="0" Grid.Row="3" Style="{StaticResource LabelWithPadding}" />
                    <TextBlock Text="{Binding SpecsInfoDisplay}" watermark:WatermarkService.Watermark="?" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3"
                            MouseDown="SpecsInfoBlock_OnMouseDown" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />
                </Grid>

                <!-- description -->
                <TextBox Style="{StaticResource TextBoxAsTextBlock}" AcceptsReturn="True" Text="{Binding Description}" TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </controls:AcObjectBase>
</selected:SelectedAcJsonObjectPage>
