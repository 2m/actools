<selected:SelectedAcJsonObjectPage x:Class="AcManager.Pages.Selected.SelectedTrackPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:selected="clr-namespace:AcManager.Pages.Selected" xmlns:controls="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        xmlns:attached="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI"
        xmlns:managers="clr-namespace:AcManager.Tools.Managers;assembly=AcManager.Tools" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
        attached:InputBindingBehavior.PropagateInputBindingsToWindow="True" FocusVisualStyle="{x:Null}"
        d:DataContext="{d:DesignInstance selected:SelectedTrackPage+SelectedTrackPageViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/AcSelectedSpecific.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource x:Key="QuickDrivePresetsItems" Source="{Binding QuickDrivePresets}" />

            <mui:BindingProxy x:Key="Model" Data="{Binding}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <controls:AcObjectBase AcObject="{Binding SelectedTrackConfiguration}" ShowIcon="False">
        <controls:AcObjectBase.ToolBars>
            <ToolBar ToolBarTray.IsLocked="True" Band="0" BandIndex="0">
                <Button Content="Folder" ToolTip="Open track's folder (Ctrl+F)" Command="{Binding SelectedObject.ViewInExplorerCommand}" />
                <Button Content="Reload" ToolTip="Reload (Ctrl+R)" Command="{Binding SelectedObject.ReloadCommand}" CommandParameter="full" />
                <Separator />
                <mui:ButtonWithComboBox Content="Drive" ButtonToolTip="Use track in a Quick Drive session (Ctrl+G)" Command="{Binding DriveCommand}"
                        PreviewMouseDown="ToolbarButtonQuickDrive_OnPreviewMouseDown" Style="{StaticResource Go.ToolBarButtonWithComboBox}">
                    <mui:ButtonWithComboBox.MenuItems>
                        <CompositeCollection>
                            <CollectionContainer Collection="{Binding Source={StaticResource QuickDrivePresetsItems}}" />
                        </CompositeCollection>
                    </mui:ButtonWithComboBox.MenuItems>
                </mui:ButtonWithComboBox>
                <Separator />
                <Button Content="Analyze" IsEnabled="False" />
            </ToolBar>
            <ToolBar Band="1" BandIndex="1">
                <Button Content="Disable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Disable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="Enable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Enable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}" />
                <Button Content="Save" Command="{Binding SelectedObject.SaveCommand}" ToolTip="Save changed json-file (Ctrl+S)" />
                <Button Content="Delete" Command="{Binding SelectedObject.DeleteCommand}" ToolTip="Remove object to Recycle Bin (Ctrl+Delete)" />
                <Separator />
                <Button Content="Find Information" Command="{Binding FindInformationCommand}" ToolTip="Find information about track (Ctrl+I)" />
                <Button Content="Copy Values" ToolTip="Copy values to other layouts" IsEnabled="False"
                        Visibility="{Binding SelectedObject.MultiLayoutMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Separator />
                <mui:ButtonWithComboBox Content="Update Preview" Command="{Binding UpdatePreviewCommand}" ButtonToolTip="Update preview (Ctrl+P)">
                    <MenuItem Header="Without Shooting" ToolTip="Just select existing image" InputGestureText="Ctrl+Alt+P"
                            Command="{Binding UpdatePreviewDirectCommand}" />
                </mui:ButtonWithComboBox>
                <Button Content="Update Map" IsEnabled="False" />
            </ToolBar>
        </controls:AcObjectBase.ToolBars>

        <StackPanel>
            <!-- layouts, previews -->
            <Grid Margin="0 0 0 12" MaxHeight="512">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Name="SelectedTrackConfigurationPreview">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <mui:BetterImage StretchDirection="DownOnly" Filename="{Binding SelectedTrackConfiguration.PreviewImage}" MaxWidth="355" />
                        <mui:BetterImage StretchDirection="DownOnly" Filename="{Binding SelectedTrackConfiguration.OutlineImage}" MaxWidth="355"
                                ShowBroken="False" />
                    </Grid>

                    <TextBox Grid.Row="1" Visibility="{Binding SelectedObject.MultiLayoutMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource TextBoxAsTextBlock}" Margin="8 8 0 0" Text="{Binding SelectedTrackConfiguration.LayoutName}"
                            attached:FocusAdvancement.AdvancesByEnterKey="True" />
                </Grid>

                <ListBox Visibility="{Binding SelectedObject.MultiLayoutMode, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Column="1"
                        ItemsSource="{Binding SelectedObject.MultiLayouts}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="180"
                        SelectedItem="{Binding SelectedTrackConfiguration}" Height="{Binding ElementName=SelectedTrackConfigurationPreview, Path=ActualHeight,
                                            Converter={StaticResource SumConverter}, ConverterParameter=4}" Margin="4 -2 0 -2">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- using Name instead of DisplayName, because Display Name of main track layout contains number of layouts -->
                            <mui:BetterImage Filename="{Binding OutlineImage}" Width="80" Height="60" ToolTip="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- data section -->
            <StackPanel Visibility="{Binding SelectedTrackConfiguration.HasData, Converter={StaticResource BooleanToVisibilityConverter}}">
                <!-- tags -->
                <mui:TagsList ItemsSource="{Binding SelectedTrackConfiguration.Tags}" SuggestionsSource="{Binding SelectedTrackConfiguration.TagsList}"
                        MouseDown="TagsList_OnMouseDown" />

                <Grid Style="{StaticResource ObjectDataGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- first row -->
                    <DockPanel Grid.Row="0" Grid.Column="0" attached:ContextMenuAdvancement.PropagateToChildren="True">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Country" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="country" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Country:" />
                        <ComboBox Text="{Binding SelectedTrackConfiguration.Country, UpdateSourceTrigger=LostFocus}"
                                ItemsSource="{x:Static managers:SuggestionLists.CountriesListView}" />
                    </DockPanel>

                    <DockPanel Grid.Row="0" Grid.Column="1" attached:ContextMenuAdvancement.PropagateToChildren="True">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Year" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}" CommandParameter="year" />
                                <MenuItem Header="Filter By Decade" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="decade" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Year:" ToolTip="Year of production start" />
                        <TextBox Text="{Binding SelectedTrackConfiguration.Year, TargetNullValue=''}" attached:TextBoxAdvancement.SpecialMode="Integer"
                                attached:WatermarkService.Watermark="?" />
                    </DockPanel>

                    <!-- second row -->
                    <DockPanel Grid.Row="1" Grid.Column="0" attached:ContextMenuAdvancement.PropagateToChildren="True">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By City" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="city" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="City:" />
                        <ComboBox Text="{Binding SelectedTrackConfiguration.City, UpdateSourceTrigger=LostFocus}"
                                ItemsSource="{x:Static managers:SuggestionLists.CitiesListiew}" />
                    </DockPanel>

                    <!-- third row -->
                    <DockPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Geo Tags:" ToolTip="Geographic coordinates" />
                        <TextBlock Text="{Binding SelectedTrackConfiguration.GeoTags, TargetNullValue=''}" MouseDown="GeoTags_KeyDown"
                                attached:WatermarkService.Watermark="?" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"
                                Style="{StaticResource TextBlockValue}" />
                    </DockPanel>

                    <DockPanel Grid.Row="2" Grid.Column="1">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Author" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="author" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Author:" ToolTip="Author, version, URL" />
                        <mui:BbCodeBlock BbCode="{Binding SelectedObject.VersionInfoDisplay}" attached:WatermarkService.Watermark="?"
                                MouseUp="VersionInfoBlock_OnMouse" />
                    </DockPanel>

                    <!-- last row -->
                    <DockPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                        <TextBlock Text="Specs:" />
                        <TextBlock Text="{Binding SelectedTrackConfiguration.SpecsInfoDisplay, TargetNullValue=''}" MouseDown="SpecsInfoBlock_OnMouseDown"
                                attached:WatermarkService.Watermark="?" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"
                                Style="{StaticResource TextBlockValue}" />
                    </DockPanel>
                </Grid>

                <!-- description -->
                <TextBox Style="{StaticResource TextBoxAsTextBlock}" AcceptsReturn="True" Text="{Binding SelectedTrackConfiguration.Description}"
                        TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </controls:AcObjectBase>
</selected:SelectedAcJsonObjectPage>
