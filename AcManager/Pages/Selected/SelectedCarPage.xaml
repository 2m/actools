<selected:SelectedAcJsonObjectPage x:Class="AcManager.Pages.Selected.SelectedCarPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:ac="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" xmlns:selected="clr-namespace:AcManager.Pages.Selected"
        xmlns:acManagersNew="clr-namespace:AcManager.Tools.AcManagersNew;assembly=AcManager.Tools"
        xmlns:attached="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI"
        xmlns:helpers="clr-namespace:AcManager.Tools.Helpers;assembly=AcManager.Tools"
        xmlns:managers="clr-namespace:AcManager.Tools.Managers;assembly=AcManager.Tools"
        xmlns:customShowroom="clr-namespace:AcManager.Controls.CustomShowroom;assembly=AcManager.Controls" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" attached:InputBindingBehavior.PropagateInputBindingsToWindow="True" FocusVisualStyle="{x:Null}"
        d:DataContext="{d:DesignInstance selected:SelectedCarPage+ViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/AcSelectedSpecific.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource x:Key="ShowroomPresetsItems" Source="{Binding ShowroomPresets}" />
            <CollectionViewSource x:Key="QuickDrivePresetsItems" Source="{Binding QuickDrivePresets}" />
            <CollectionViewSource x:Key="UpdatePreviewsPresetsItems" Source="{Binding UpdatePreviewsPresets}" />

            <mui:BindingProxy x:Key="Model" Data="{Binding}" />
            <mui:BindingProxy x:Key="Selected" Data="{Binding SelectedObject}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <ac:AcObjectBase AcObject="{Binding SelectedObject}" ShowIcon="True" IconMouseDown="AcObjectBase_IconMouseDown" Icon="{Binding SelectedObject.BrandBadge}">
        <ac:AcObjectBase.ToolBars>
            <ToolBar ToolBarTray.IsLocked="True" Band="0" BandIndex="0">
                <Button Content="Folder" Command="{Binding SelectedObject.ViewInExplorerCommand}">
                    <Button.ToolTip>Open car’s folder (Ctrl+F)</Button.ToolTip>
                </Button>
                <Button Content="Reload" ToolTip="Reload (Ctrl+R)" Command="{Binding SelectedObject.ReloadCommand}" CommandParameter="full" />
                <Separator />
                <mui:ButtonWithComboBox Content="Showroom" ButtonToolTip="View car in showroom (Ctrl+H)" Command="{Binding OpenInShowroomCommand}"
                        PreviewMouseDown="ToolbarButtonShowroom_OnPreviewMouseDown">
                    <MenuItem Header="Options" ToolTip="Select showroom, filter and etc." InputGestureText="Ctrl+Shift+H"
                            Command="{Binding OpenInShowroomOptionsCommand}" />
                    <MenuItem Header="Presets">
                        <MenuItem.ItemsSource>
                            <CompositeCollection>
                                <CollectionContainer Collection="{Binding Source={StaticResource ShowroomPresetsItems}}" />
                            </CompositeCollection>
                        </MenuItem.ItemsSource>
                    </MenuItem>
                    <MenuItem Header="Custom Showroom">
                        <MenuItem x:Name="LiteCustomShowroomMenuItem" Header="Lite Custom Showroom"
                                ToolTip="Faster and more accurate, helpful for modding or skins drawing" Command="{Binding OpenInCustomShowroomCommand}"
                                CommandParameter="{x:Static customShowroom:CustomShowroomMode.Lite}" />
                        <MenuItem x:Name="FancyCustomShowroomMenuItem" Header="Fancy Custom Showroom"
                                ToolTip="Slower and less accurate, but with proper lighting and reflections" Command="{Binding OpenInCustomShowroomCommand}"
                                CommandParameter="{x:Static customShowroom:CustomShowroomMode.Fancy}" />
                    </MenuItem>
                </mui:ButtonWithComboBox>
                <mui:ButtonWithComboBox Content="Drive" ButtonToolTip="Use car in a Quick Drive session (Ctrl+G)" Command="{Binding DriveCommand}"
                        PreviewMouseDown="ToolbarButtonQuickDrive_OnPreviewMouseDown" Style="{StaticResource Go.ToolBarButtonWithComboBox}">
                    <mui:ButtonWithComboBox.MenuItems>
                        <CompositeCollection>
                            <CollectionContainer Collection="{Binding Source={StaticResource QuickDrivePresetsItems}}" />
                        </CompositeCollection>
                    </mui:ButtonWithComboBox.MenuItems>
                </mui:ButtonWithComboBox>
                <Separator />
                <Button Content="Analyze" IsEnabled="False" />
                <Separator />
                <Button Content="Skins" Command="{Binding ManageSkinsCommand}" ToolTip="Manage skins (Ctrl+K)" />
                <Button Content="Setups" Command="{Binding ManageSetupsCommand}" ToolTip="Manage setups (Ctrl+U)" />
            </ToolBar>
            <ToolBar Band="1" BandIndex="1">
                <Button Content="Disable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Disable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="Enable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Enable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}" />
                <Button Content="Save" Command="{Binding SelectedObject.SaveCommand}" ToolTip="Save changed json-file (Ctrl+S)" />
                <Button Content="Delete" Command="{Binding SelectedObject.DeleteCommand}" ToolTip="Remove car to the Recycle Bin (Ctrl+Delete)" />
                <Separator />
                <Button Content="Find Information" Command="{Binding FindInformationCommand}" ToolTip="Find information about car (Ctrl+I)" />
                <mui:ButtonWithComboBox Content="Update Previews" Command="{Binding UpdatePreviewsCommand}" ButtonToolTip="Update all previews (Ctrl+P)"
                        PreviewMouseDown="ToolbarButtonUpdatePreviews_OnPreviewMouseDown">
                    <MenuItem Header="Manual Mode" ToolTip="Set camera position manually and then press F8 to start shooting" InputGestureText="Ctrl+Alt+P"
                            Command="{Binding UpdatePreviewsManuallyCommand}" />
                    <MenuItem Header="Options" ToolTip="Select showroom, filter, camera position and etc." InputGestureText="Ctrl+Shift+P"
                            Command="{Binding UpdatePreviewsOptionsCommand}" />
                    <Separator />
                    <MenuItem Header="Presets">
                        <MenuItem.ItemsSource>
                            <CompositeCollection>
                                <CollectionContainer Collection="{Binding Source={StaticResource UpdatePreviewsPresetsItems}}" />
                            </CompositeCollection>
                        </MenuItem.ItemsSource>
                    </MenuItem>
                </mui:ButtonWithComboBox>
            </ToolBar>
            <ToolBar Band="1" BandIndex="1">
                <Button Content="Pack Data" Command="{Binding PackDataCommand}" ToolTip="For a decent online (Ctrl+J)"
                        Visibility="{Binding DeveloperMode, Source={x:Static helpers:SettingsHolder.Common}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="Unpack Data" Command="{Binding ReadDataCommand}" ToolTip="For development purposes only (Alt+J)"
                        Visibility="{Binding DeveloperMode, Source={x:Static helpers:SettingsHolder.Common}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="Replace Sound" Command="{Binding ReplaceSoundCommand}" />
            </ToolBar>
        </ac:AcObjectBase.ToolBars>

        <StackPanel>
            <!-- preview, skins -->
            <Grid Margin="0 0 0 12" MaxHeight="575">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="114" />
                </Grid.ColumnDefinitions>

                <!-- preview of selected skin -->
                <Grid Name="SelectedSkinPreview">
                    <mui:BetterImage Name="SelectedSkinPreviewImage" DataContext="{Binding SelectedObject.SelectedSkin}" Filename="{Binding PreviewImage}"
                            PreviewMouseLeftButtonDown="SelectedSkinPreview_MouseDown" PreviewMouseRightButtonUp="SelectedSkinPreview_MouseUp" MinHeight="160"
                            MaxHeight="575" MaxWidth="1022"
                            Height="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource MultiplyConverter}, ConverterParameter=0.5626223}" />
                    <mui:BetterImage Margin="8" HorizontalAlignment="Right" VerticalAlignment="Top" Width="64" Height="64" MouseDown="UpgradeIcon_MouseDown"
                            Filename="{Binding SelectedObject.UpgradeIcon}"
                            Visibility="{Binding SelectedObject.IsChild, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>

                <!-- skins list -->
                <ListBox ItemsSource="{Binding SelectedObject.SkinsEnabledWrappersList}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        IsSynchronizedWithCurrentItem="True" Grid.Column="1" Width="120" Margin="4 -2 0 -2" VerticalAlignment="Top" HorizontalAlignment="Left"
                        Height="{Binding ActualHeight, Source={x:Reference SelectedSkinPreviewImage}, Converter={StaticResource SumConverter}, ConverterParameter=4}"
                        ScrollViewer.CanContentScroll="True">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <mui:VirtualizingTilePanel HorizontalAlignment="Left" VirtualizationMode="Recycling" IsVirtualizing="True" ScrollUnit="Pixel"
                                    ItemWidth="36" ItemHeight="36" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type acManagersNew:AcItemWrapper}">
                            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                            <mui:BetterImage ToolTip="{Binding Value.DisplayName}" Filename="{Binding Value.LiveryImage}" Width="32" Height="32"
                                    ClearOnChange="True" PreviewMouseRightButtonUp="SelectedSkinPreview_MouseUp" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- data section -->
            <StackPanel Visibility="{Binding SelectedObject.HasData, Converter={StaticResource BooleanToVisibilityConverter}}">
                <!-- tags -->
                <mui:TagsList ItemsSource="{Binding SelectedObject.Tags}" SuggestionsSource="{x:Static managers:SuggestionLists.CarTagsListView}"
                        attached:ContextMenuAdvancement.PropagateToChildren="True">
                    <mui:TagsList.ItemContextMenu>
                        <mui:InheritingContextMenu>
                            <MenuItem Header="Filter By Tag" Command="{Binding Data.FilterTagCommand, Source={StaticResource Model}}"
                                    CommandParameter="{Binding}" />
                        </mui:InheritingContextMenu>
                    </mui:TagsList.ItemContextMenu>
                    <mui:TagsList.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Clean Up Tags" Command="{Binding Data.TagsCleanUpCommand, Source={StaticResource Selected}}" />
                            <MenuItem Header="Sort Tags" Command="{Binding Data.TagsSortCommand, Source={StaticResource Selected}}" />
                            <MenuItem Header="Clean Up &amp; Sort Tags" Command="{Binding Data.TagsCleanUpAndSortCommand, Source={StaticResource Selected}}"
                                    InputGestureText="Ctrl+Alt+T" />
                        </ContextMenu>
                    </mui:TagsList.ContextMenu>
                </mui:TagsList>

                <Grid Style="{StaticResource ObjectDataGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- first row -->
                    <DockPanel Grid.Row="0" Grid.Column="0" attached:ContextMenuAdvancement.PropagateToChildren="True">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Brand" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="brand" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Brand:" />
                        <ComboBox Text="{Binding SelectedObject.Brand, UpdateSourceTrigger=LostFocus}"
                                ItemsSource="{x:Static managers:SuggestionLists.CarBrandsListView}" />
                    </DockPanel>

                    <DockPanel Grid.Row="0" Grid.Column="1" attached:ContextMenuAdvancement.PropagateToChildren="True">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Country" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="country" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Country:" />
                        <ComboBox Text="{Binding SelectedObject.Country, UpdateSourceTrigger=LostFocus}"
                                ItemsSource="{x:Static managers:SuggestionLists.CountriesListView}" />
                    </DockPanel>

                    <!-- second row -->
                    <DockPanel Grid.Row="1" Grid.Column="0" attached:ContextMenuAdvancement.PropagateToChildren="True">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Class" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="class" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Class:">
                            <TextBlock.ToolTip>Car class (such as “race” or “street”) in lowercase</TextBlock.ToolTip>
                        </TextBlock>
                        <ComboBox Text="{Binding SelectedObject.CarClass, UpdateSourceTrigger=LostFocus}"
                                ItemsSource="{x:Static managers:SuggestionLists.CarClassesListView}" />
                    </DockPanel>

                    <DockPanel Grid.Row="1" Grid.Column="1" attached:ContextMenuAdvancement.PropagateToChildren="True">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Year" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}" CommandParameter="year" />
                                <MenuItem Header="Filter By Decade" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="decade" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Year:" ToolTip="Year of production start" />
                        <TextBox Text="{Binding SelectedObject.Year, TargetNullValue=''}" attached:TextBoxAdvancement.SpecialMode="Integer"
                                attached:WatermarkService.Watermark="?" />
                    </DockPanel>

                    <!-- third row -->
                    <DockPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Parent:" ToolTip="Parent car (if set, this car will be a tuned version of it)" />
                        <mui:BbCodeBlock Text="{Binding SelectedObject.ParentDisplayName}" attached:WatermarkService.Watermark="None"
                                MouseDown="ParentBlock_OnMouseDown" />
                    </DockPanel>

                    <DockPanel Grid.Row="2" Grid.Column="1">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Author" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="author" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Author:" ToolTip="Author, version, URL" />
                        <mui:BbCodeBlock BbCode="{Binding SelectedObject.VersionInfoDisplay}" attached:WatermarkService.Watermark="?"
                                MouseUp="VersionInfoBlock_OnMouse" />
                    </DockPanel>

                    <!-- last row -->
                    <DockPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Filter By Similar Power" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="power" />
                                <MenuItem Header="Filter By Similar Torque" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="torque" />
                                <MenuItem Header="Filter By Similar Weight" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="weight" />
                                <MenuItem Header="Filter By Similar P/W Ratio" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="pwratio" />
                                <MenuItem Header="Filter By Similar Top Speed" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="topspeed" />
                                <MenuItem Header="Filter By Similar Acceleration" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}"
                                        CommandParameter="acceleration" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <TextBlock Text="Specs:" ToolTip="Specifications" />
                        <mui:BbCodeBlock Text="{Binding SelectedObject.SpecsInfoDisplay}" attached:WatermarkService.Watermark="?"
                                MouseDown="SpecsInfoBlock_OnMouseDown" />
                    </DockPanel>
                </Grid>

                <!-- description -->
                <TextBox Style="{StaticResource TextBoxAsTextBlock}" Text="{Binding SelectedObject.Description}" AcceptsReturn="True" TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </ac:AcObjectBase>
</selected:SelectedAcJsonObjectPage>
