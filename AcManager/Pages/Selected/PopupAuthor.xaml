<UserControl x:Class="AcManager.Pages.Selected.PopupAuthor" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:AcManager.Pages.Selected"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" xmlns:attached="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI"
        xmlns:managers="clr-namespace:AcManager.Tools.Managers;assembly=AcManager.Tools" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/AcSelectedSpecific.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <mui:BindingProxy x:Key="Model" Data="{Binding}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{StaticResource ObjectDataGrid}" Width="400" Margin="0 4 4 4">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" attached:ContextMenuAdvancement.PropagateToChildren="True">
            <DockPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Filter By Author" Command="{Binding Data.FilterCommand, Source={StaticResource Model}}" CommandParameter="author" />
                </ContextMenu>
            </DockPanel.ContextMenu>
            <TextBlock Text="Author:">
                <TextBlock.ToolTip>If you makes your own mods, please, use this field instead of description (or, of course, name)</TextBlock.ToolTip>
            </TextBlock>
            <ComboBox Text="{Binding SelectedObject.Author, UpdateSourceTrigger=LostFocus}" ItemsSource="{x:Static managers:SuggestionLists.AuthorsListView}" />
        </DockPanel>

        <DockPanel Grid.Row="1">
            <TextBlock Text="URL:">
                <TextBlock.ToolTip>Again, please, use this field if you’re modder and you have a web-page with an additional information and new versions for this object</TextBlock.ToolTip>
            </TextBlock>
            <TextBox Text="{Binding SelectedObject.Url, UpdateSourceTrigger=LostFocus}" />
        </DockPanel>

        <DockPanel Grid.Row="2">
            <TextBlock Text="Version:">
                <!-- TODO -->
                <TextBlock.ToolTip>Will be used for auto-updating later</TextBlock.ToolTip>
            </TextBlock>
            <TextBox Text="{Binding SelectedObject.Version, UpdateSourceTrigger=LostFocus}" attached:TextBoxAdvancement.SpecialMode="Version" />
        </DockPanel>
    </Grid>
</UserControl>
