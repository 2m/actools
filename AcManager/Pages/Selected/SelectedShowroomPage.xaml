<selected:SelectedAcJsonObjectPage x:Class="AcManager.Pages.Selected.SelectedShowroomPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:ac="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" xmlns:selected="clr-namespace:AcManager.Pages.Selected"
                                   xmlns:services="clr-namespace:AcManager.Controls.Services;assembly=AcManager.Controls"
        xmlns:attached="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI"
                                   mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
        attached:InputBindingBehavior.PropagateInputBindingsToWindow="True" FocusVisualStyle="{x:Null}">
    <ac:AcObjectBase AcObject="{Binding SelectedObject}" ShowIcon="False">
        <ac:AcObjectBase.ToolBars>
            <ToolBar ToolBarTray.IsLocked="True" Band="0" BandIndex="0">
                <Button Content="Folder" ToolTip="Open showroom's folder (Ctrl+F)" Command="{Binding SelectedObject.ViewInExplorerCommand}" />
                <Button Content="Reload" ToolTip="Reload (Ctrl+R)" Command="{Binding SelectedObject.ReloadCommand}" CommandParameter="full" />
                <Separator />
                <Button Content="Analyze" IsEnabled="False" />
            </ToolBar>
            <ToolBar Band="0" BandIndex="0">
                <Button Content="Create New Showroom" Command="{Binding CreateNewShowroomCommand}" 
                        ToolTip="Create new showroom from existing panorama (Ctrl+N)" />
            </ToolBar>
            <ToolBar Band="1" BandIndex="1">
                <Button Content="Disable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Disable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="Enable" Command="{Binding SelectedObject.ToggleCommand}" ToolTip="Enable (Ctrl+D)"
                        Visibility="{Binding SelectedObject.Enabled, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}" />
                <Button Content="Save" Command="{Binding SelectedObject.SaveCommand}" ToolTip="Save changed json-file (Ctrl+S)" />
                <Button Content="Delete" Command="{Binding SelectedObject.DeleteCommand}" ToolTip="Remove object to Recycle Bin (Ctrl+Delete)" />
                <Separator />
                <Button Content="Update Preview" Command="{Binding UpdatePreviewCommand}" ToolTip="Update showroom's preview (Ctrl+P)" />
            </ToolBar>
            <ToolBar Band="1" BandIndex="1" Visibility="{Binding SelectedObject.HasSound, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button Content="Turn Off Sound" Command="{Binding SelectedObject.ToggleSoundCommand}" ToolTip="Disable sound (Ctrl+I)"
                        Visibility="{Binding SelectedObject.SoundEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="Turn On Sound" Command="{Binding SelectedObject.ToggleSoundCommand}" ToolTip="Enable sound (Ctrl+I)"
                        Visibility="{Binding SelectedObject.SoundEnabled, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}" />
            </ToolBar>
        </ac:AcObjectBase.ToolBars>

        <StackPanel>
            <Image Margin="0 0 0 12" RenderOptions.BitmapScalingMode="LowQuality"
                    Source="{Binding SelectedObject.PreviewImage, IsAsync=True, Converter={StaticResource UriToCachedImageConverter}}"
                    services:ImageViewerService.Image="{Binding SelectedObject.PreviewImage}" MaxWidth="1022" MaxHeight="575"
                    Visibility="{Binding SelectedObject.PreviewImage, Converter={StaticResource ExistToVisibilityConverter}}" />

            <!-- data section -->
            <StackPanel Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityConverter}}" DataContext="{Binding SelectedObject}">
                <!-- tags -->
                <mui:TagsList ItemsSource="{Binding Tags}" SuggestionsSource="{Binding TagsList}" MouseDown="TagsList_OnMouseDown" />

                <Grid Margin="0 8 8 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- first row -->
                    <TextBlock Text="Country:" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelWithPadding}" />
                    <TextBlock Text="Year:" Grid.Column="2" Grid.Row="0" Style="{StaticResource LabelWithPadding}" ToolTip="Year of production start" />

                    <ComboBox Text="{Binding Country}" Grid.Column="1" Grid.Row="0" ItemsSource="{Binding CountriesList}" IsTextSearchEnabled="True"
                            IsEditable="True" Style="{StaticResource ComboBoxAsTextBlock}" attached:FocusAdvancement.AdvancesByEnterKey="True"
                            attached:WatermarkService.Watermark="?" />
                    <TextBox Text="{Binding Year, TargetNullValue=''}" Grid.Column="3" Grid.Row="0" Style="{StaticResource TextBoxAsTextBlock}"
                            attached:FocusAdvancement.AdvancesByEnterKey="True" attached:TextBoxAdvancement.SpecialMode="Integer" attached:WatermarkService.Watermark="?" />

                    <!-- last row -->
                    <TextBlock Text="Author:" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelWithPadding}" ToolTip="Author/version, url" />
                    <mui:BbCodeBlock BbCode="{Binding VersionInfoDisplay}" MouseDown="VersionInfoBlock_OnMouseDown" attached:WatermarkService.Watermark="?"
                            Grid.Column="1" Grid.Row="1" />
                </Grid>

                <!-- description -->
                <TextBox Style="{StaticResource TextBoxAsTextBlock}" AcceptsReturn="True" Text="{Binding Description}" TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </ac:AcObjectBase>
</selected:SelectedAcJsonObjectPage>
