<selected:SelectedAcObjectPage x:Class="AcManager.Pages.Selected.SelectedReplayPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:ac="clr-namespace:AcManager.Controls;assembly=AcManager.Controls"
        xmlns:selected="clr-namespace:AcManager.Pages.Selected" xmlns:helpers="clr-namespace:AcManager.Tools.Helpers;assembly=AcManager.Tools"
        xmlns:objects="clr-namespace:AcManager.Tools.Objects;assembly=AcManager.Tools"
        xmlns:attached="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:services="clr-namespace:AcManager.Controls.Services;assembly=AcManager.Controls" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
        attached:InputBindingBehavior.PropagateInputBindingsToWindow="True" FocusVisualStyle="{x:Null}"
        d:DataContext="{d:DesignInstance selected:SelectedReplayPage+SelectedReplayPageViewModel}">
    <ac:AcObjectBase AcObject="{Binding SelectedObject}" ShowIcon="False">
        <ac:AcObjectBase.ToolBars>
            <ToolBar ToolBarTray.IsLocked="True" Band="0" BandIndex="0">
                <Button Content="View in Explorer" ToolTip="View replay file in explorer (Ctrl+F)" Command="{Binding SelectedObject.ViewInExplorerCommand}" />
                <Button Content="Reload" ToolTip="Reload (Ctrl+R)" Command="{Binding SelectedObject.ReloadCommand}" CommandParameter="full" />
                <Separator />
                <Button Content="Share" Command="{Binding ShareCommand}" ToolTip="Share replay using Google Drive (Ctrl+Page Up)" />
                <Button Content="Play" Command="{Binding PlayCommand}" ToolTip="Run replay (Ctrl+G)" Style="{StaticResource Go.ToolBarButton}" />
            </ToolBar>
            <ToolBar Band="1" BandIndex="1">
                <Button Content="Rename" Command="{Binding SelectedObject.SaveCommand}" ToolTip="Rename file according to the new name (Ctrl+S)" />
                <Button Content="Delete" Command="{Binding SelectedObject.DeleteCommand}" ToolTip="Remove replay to Recycle Bin (Ctrl+Delete)" />
            </ToolBar>
        </ac:AcObjectBase.ToolBars>

        <StackPanel>
            <Grid Margin="20 0 20 20" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Visibility="{Binding Car, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=inverse}" Width="355" Height="200"
                        Background="Black" Margin="0 0 20 0" services:ImageViewerService.Image="{Binding CarSkin.PreviewImage}">
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Filter By Car" Command="{Binding FilterCommand}" CommandParameter="car" />
                        </ContextMenu>
                    </Grid.ContextMenu>
                    <mui:BetterImage Filename="{Binding CarSkin.PreviewImage}" Width="355" Height="200" Stretch="UniformToFill" />
                    <TextBlock Padding="4" VerticalAlignment="Bottom" Background="#99333333" Text="{Binding Car.DisplayName}" Foreground="White" />
                </Grid>

                <Grid Grid.Column="1" Visibility="{Binding Track, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=inverse}" Width="355"
                        Height="200" Background="Black" services:ImageViewerService.Image="{Binding Track.PreviewImage}">
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Filter By Track" Command="{Binding FilterCommand}" CommandParameter="track" />
                        </ContextMenu>
                    </Grid.ContextMenu>
                    <mui:BetterImage StretchDirection="DownOnly" Filename="{Binding Track.PreviewImage}" MaxWidth="355" />
                    <mui:BetterImage StretchDirection="DownOnly" Filename="{Binding Track.OutlineImage}" MaxWidth="355" ShowBroken="False" />
                    <TextBlock Padding="4" VerticalAlignment="Bottom" Background="#99333333" Text="{Binding Track.Name}" Foreground="White" />
                </Grid>
            </Grid>

            <Grid Margin="0 0 8 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="Date:" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelWithPadding}" />
                <TextBlock Text="Size:" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelWithPadding}" />

                <TextBlock Text="{Binding SelectedObject.CreationTime}" Grid.Column="1" Grid.Row="0">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Filter By Age" Command="{Binding FilterCommand}" CommandParameter="age" />
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>
                <TextBlock Text="{Binding SelectedObject.Size, Converter={StaticResource FileSizeConverter}}" Grid.Column="1" Grid.Row="1">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Filter By Size" Command="{Binding FilterCommand}" CommandParameter="size" />
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>

                <TextBlock Text="Driver Name:" Grid.Column="2" Grid.Row="0" Style="{StaticResource LabelWithPadding}" />
                <TextBlock Text="Weather:" Grid.Column="2" Grid.Row="1" Style="{StaticResource LabelWithPadding}" />

                <TextBlock Text="{Binding SelectedObject.DriverName}" Grid.Column="3" Grid.Row="0" attached:WatermarkService.Watermark="?">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Filter By Driver Name" Command="{Binding FilterCommand}" CommandParameter="driver" />
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>
                <TextBlock Text="{Binding Weather.DisplayName}" Grid.Column="3" Grid.Row="1" attached:WatermarkService.Watermark="?">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Filter By Weather" Command="{Binding FilterCommand}" CommandParameter="weather" />
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>
            </Grid>

            <Grid Margin="0 0 0 8"
                    Visibility="{Binding SelectedObject.Id, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static objects:ReplayObject.PreviousReplayName}}">
                <Rectangle Stroke="{DynamicResource Error}" StrokeThickness="1" StrokeDashArray="4 4" SnapsToDevicePixels="True" />
                <StackPanel Margin="8">
                    <TextBlock Style="{StaticResource Label}" Foreground="{DynamicResource Error}">Warning</TextBlock>
                    <TextBlock>Replay will be overwritten after the next race. Rename it to keep it.</TextBlock>
                    <TextBlock Margin="0 4 0 0" FontStyle="Italic"
                            Visibility="{Binding AutoSaveReplays, Source={x:Static helpers:SettingsHolder.Drive}, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">You can go to Settings and enable “Save replays automatically” option to avoid losing something valuable.</TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ac:AcObjectBase>
</selected:SelectedAcObjectPage>
