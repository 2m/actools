<UserControl x:Class="AcManager.Pages.Settings.SettingsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:internal="clr-namespace:AcManager.Internal;assembly=AcManager.Internal"
             mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" FocusVisualStyle="{x:Null}">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Settings/SettingsGeneral.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="general" Source="/Pages/Settings/SettingsGeneral.xaml" />
                <mui:Link DisplayName="addons" Source="/Pages/Settings/SettingsAddons.xaml" />
                <mui:Link DisplayName="drive" Source="/Pages/Settings/SettingsDrive.xaml" />
                <mui:Link DisplayName="online" Source="/Pages/Settings/SettingsOnline.xaml" />
                <mui:Link DisplayName="appearance" Source="/Pages/Settings/SettingsAppearance.xaml" IsEnabled="{x:Static internal:AppKeyHolder.IsAllRight}" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
