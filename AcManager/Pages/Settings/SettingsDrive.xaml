<UserControl x:Class="AcManager.Pages.Settings.SettingsDrive" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:networkInformation="clr-namespace:System.Net.NetworkInformation;assembly=System"
        xmlns:settings="clr-namespace:AcManager.Pages.Settings" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:h="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI"
        xmlns:t="clr-namespace:AcManager.Tools;assembly=AcManager.Tools" xmlns:g="clr-namespace:AcManager" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" FocusVisualStyle="{x:Null}" d:DataContext="{d:DesignInstance settings:SettingsDrive+SettingsDriveViewModel}">
    <UserControl.Resources>
        <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/SettingsSpecific.xaml" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Style="{StaticResource SettingsPanel}">
            <DockPanel>
                <Label>
                    <TextBlock>
                        <Run Text="{x:Static g:Resources.Settings_Drive_Starter}" /><Hyperlink Typography.Variants="Superscript" FontSize="11"
                                BaselineAlignment="Superscript" Command="{Binding NavigateCommand}"
                                CommandParameter="/Pages/About/ImportantTipsPage.xaml?Key=starters">[?]</Hyperlink><Run Text=":" />
                    </TextBlock>
                </Label>
                <ComboBox ItemsSource="{Binding Drive.StarterTypes}" SelectedItem="{Binding Drive.SelectedStarterType}" DisplayMemberPath="DisplayName">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                            <Setter Property="IsEnabled" Value="{Binding IsAvailable}" />
                            <Setter Property="ToolTip" Value="{Binding Description}" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </DockPanel>

            <CheckBox IsChecked="{Binding Drive.Use32BitVersion}">
                <Label Content="{x:Static g:Resources.Settings_Drive_32bit}" />
            </CheckBox>

            <CheckBox IsChecked="{Binding Drive.ImmediateStart}">
                <Label Content="{x:Static g:Resources.Settings_Drive_StartImmediately}" />
            </CheckBox>

            <CheckBox IsChecked="{Binding Drive.SkipPracticeResults}">
                <Label Content="{x:Static g:Resources.Settings_Drive_SkipPracticeResults}" />
            </CheckBox>

            <!--player's name-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="{x:Static g:Resources.Settings_Drive_PlayerNameHeader}" />

            <DockPanel>
                <Label Content="{x:Static g:Resources.Settings_Drive_NameLabel}" />
                <TextBox Text="{Binding Drive.PlayerName}" h:WatermarkService.Watermark="?" h:FocusAdvancement.AdvancesByEnterKey="True" />
            </DockPanel>

            <DockPanel>
                <Label Content="{x:Static g:Resources.Settings_Drive_NationalityLabel}" />
                <TextBox Text="{Binding Drive.PlayerNationality}" h:WatermarkService.Watermark="?" h:FocusAdvancement.AdvancesByEnterKey="True" />
            </DockPanel>

            <DockPanel>
                <Label Content="{x:Static g:Resources.Settings_Drive_OnlineNameLabel}" />
                <CheckBox DockPanel.Dock="Left" IsChecked="{Binding Drive.DifferentPlayerNameOnline}"
                        ToolTip="{x:Static g:Resources.Settings_Drive_OnlineName_Tooltip}" VerticalAlignment="Center" />
                <TextBox Text="{Binding Drive.PlayerNameOnline}" h:WatermarkService.Watermark="?" h:FocusAdvancement.AdvancesByEnterKey="True"
                        IsEnabled="{Binding Drive.DifferentPlayerNameOnline}" />
            </DockPanel>

            <!--quick drive-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="{x:Static g:Resources.Settings_Drive_QuickDriveHeader}" />

            <CheckBox IsChecked="{Binding Drive.QuickDriveExpandBounds}" ToolTip="{x:Static g:Resources.Settings_Drive_ExpandBounds_Tooltip}">
                <Label Content="{x:Static g:Resources.Settings_Drive_ExpandBounds}" />
            </CheckBox>

            <!--kunos career-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="{x:Static g:Resources.Settings_Drive_KunosCareerHeader}" />

            <CheckBox IsChecked="{Binding Drive.KunosCareerUserAiLevel}">
                <Label Content="{x:Static g:Resources.Settings_Drive_ChangeAiLevel}" />
            </CheckBox>

            <CheckBox IsChecked="{Binding Drive.KunosCareerUserSkin}">
                <Label Content="{x:Static g:Resources.Settings_Drive_ChangeCarSkin}" />
            </CheckBox>

            <!--game-related events-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="{x:Static g:Resources.Settings_Drive_EventsHeader}" />
            <DockPanel>
                <DockPanel.ToolTip>
                    <ToolTip>
                        <StackPanel Margin="4">
                            <mui:BbCodeBlock TextWrapping="WrapWithOverflow" BbCode="{x:Static g:Resources.Settings_Drive_PreCommand_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </DockPanel.ToolTip>
                <Label Content="{x:Static g:Resources.Settings_Drive_PreCommandLabel}" />
                <TextBox Text="{Binding Drive.PreCommand}" h:WatermarkService.Watermark="{x:Static t:Resources.Common_None}" />
            </DockPanel>

            <DockPanel>
                <DockPanel.ToolTip>
                    <ToolTip>
                        <StackPanel Margin="4">
                            <mui:BbCodeBlock TextWrapping="WrapWithOverflow" BbCode="{x:Static g:Resources.Settings_Drive_PostCommand_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </DockPanel.ToolTip>
                <Label Content="{x:Static g:Resources.Settings_Drive_PostCommandLabel}" />
                <TextBox Text="{Binding Drive.PostCommand}" h:WatermarkService.Watermark="{x:Static t:Resources.Common_None}" />
            </DockPanel>

            <CheckBox IsChecked="{Binding Drive.AutomaticallyConvertBmpToJpg}" ToolTip="{x:Static g:Resources.Settings_Drive_ConvertScreenshots_Tooltip}">
                <Label Content="{x:Static g:Resources.Settings_Drive_ConvertScreenshots}" />
            </CheckBox>

            <CheckBox IsChecked="{Binding Drive.WeatherSpecificClouds}" ToolTip="{x:Static g:Resources.Settings_Drive_CustomClouds_Tooltip}">
                <Label Content="{x:Static g:Resources.Settings_Drive_CustomClouds}" />
            </CheckBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
