<UserControl x:Class="AcManager.Pages.Settings.SettingsCustomShowroom" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:settings="clr-namespace:AcManager.Pages.Settings"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" FocusVisualStyle="{x:Null}"
        d:DataContext="{d:DesignInstance settings:SettingsCustomShowroom+CustomShowroomViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Assets/SettingsSpecific.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Style="{StaticResource SettingsPanel}">
            <DockPanel>
                <Label Content="Use by default:" />
                <ComboBox ItemsSource="{Binding Holder.ShowroomTypes}" SelectedItem="{Binding Holder.ShowroomType}" ToolTip="Hold Ctrl when starting to select the other one" />
            </DockPanel>

            <TextBlock Style="{StaticResource SettingsPanel.Small}" Margin="0 0 0 20" Text="
                Lite Showroom is DirectX 10-compatible, much simpler and easier for a videocard. Perfect solution for skins drawing.
            " />

            <CheckBox IsChecked="{Binding Holder.SmartCameraPivot}"
                    ToolTip="Tries to keep a car at the center of the screen as much as possible (but without any heavy calculations)">
                <Label Content="Auto-adjusting camera pivot" />
            </CheckBox>

            <CheckBox IsChecked="{Binding Holder.AlternativeControlScheme}"
                    ToolTip="Use left mouse button for panning and right for rotating a model instead">
                <Label Content="Invert mouse buttons" />
            </CheckBox>

            <!--lite specific-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="Lite Showroom:" />

            <CheckBox IsChecked="{Binding Holder.LiteUseBloom}" ToolTip="Disable if you need maximum performance">
                <Label Content="Use _bloom" />
            </CheckBox>

            <CheckBox IsChecked="{Binding Holder.LiteUseMsaa}" ToolTip="Makes picture even worse if you asked me">
                <Label Content="Use MSAA" />
            </CheckBox>

            <CheckBox IsChecked="{Binding Holder.LiteUseFxaa}" ToolTip="You can toggle it any time by pressing F">
                <Label Content="Use _FXAA" />
            </CheckBox>

            <!--fancy specific-->
            <TextBlock Style="{StaticResource SettingsPanel.Heading2}" Text="Fancy Showroom:" />

            <DockPanel>
                <Label Content="Default showroom:" />
                <ComboBox SelectedItem="{Binding SelectedShowroom}" ItemsSource="{Binding Showrooms}" />
            </DockPanel>

            <CheckBox IsChecked="{Binding Holder.UseFxaa}">
                <Label Content="Use FXAA" />
            </CheckBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
