<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FirstFloor.ModernUI.Windows.Controls">
    <Style TargetType="{x:Type controls:ModernTabSplitter}">
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="Width" Value="9" />
        <Setter Property="ResizeBehavior" Value="PreviousAndNext" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ModernTabSplitter}">
                    <Border Background="Transparent" Padding="4 0">
                        <Border Background="{DynamicResource SeparatorBackground}" Width="1" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>