<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:FirstFloor.ModernUI.Windows.Controls">
  <Style TargetType="{x:Type controls:ModernTabSplitter}">
    <Setter Property="Grid.Column" Value="1" />
    <Setter Property="ResizeBehavior" Value="PreviousAndNext" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="Foreground" Value="{DynamicResource SeparatorBackground}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controls:ModernTabSplitter}">
          <Border Background="Transparent" HorizontalAlignment="Stretch">
            <Border Background="{TemplateBinding Foreground}" Width="1" HorizontalAlignment="Center" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>