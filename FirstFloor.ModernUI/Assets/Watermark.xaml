<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Watermark" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource InputText}" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="1 0 1 0" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextOptions.TextFormattingMode" Value="{DynamicResource FormattingMode}" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
    </Style>

    <Style x:Key="Watermark.TextBox" TargetType="TextBlock" BasedOn="{StaticResource Watermark}">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="7 3 8 3" />
    </Style>

    <Style x:Key="Watermark.ComboBox" TargetType="TextBlock" BasedOn="{StaticResource Watermark}">
        <Setter Property="Margin" Value="7 3 8 3" />
    </Style>

    <Style x:Key="Watermark.TextBoxAsTextBlock" TargetType="TextBlock" BasedOn="{StaticResource Watermark}" />
    <Style x:Key="Watermark.ComboBoxAsTextBlock" TargetType="TextBlock" BasedOn="{StaticResource Watermark}" />
</ResourceDictionary>