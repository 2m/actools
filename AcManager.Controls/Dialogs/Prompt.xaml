<mui:ModernDialog x:Class="AcManager.Controls.Dialogs.Prompt" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:dialogs="clr-namespace:AcManager.Controls.Dialogs" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
        d:DataContext="{d:DesignInstance dialogs:Prompt+PromptViewModel}" SizeToContent="Height" Width="720" MinHeight="160">
    <StackPanel x:Name="Panel" VerticalAlignment="Center">
        <TextBlock Text="{Binding Description, Mode=OneTime}" Margin="0 0 0 8" />
    </StackPanel>
</mui:ModernDialog>
