            <Style TargetType="mui:ModernToggleButton">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{DynamicResource ButtonText}" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="{StaticResource BlockMargin}" />
                <Setter Property="Width" Value="{StaticResource BlockSize}" />
                <Setter Property="Height" Value="{StaticResource BlockSize}" />
                <Setter Property="IconWidth" Value="{StaticResource IconSize}" />
                <Setter Property="IconHeight" Value="{StaticResource IconSize}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="mui:ModernToggleButton">
                            <Border x:Name="PART_Border" Background="{TemplateBinding Background}" BorderThickness="0" BorderBrush="Transparent">
                                <DockPanel Margin="{TemplateBinding Padding}">
                                    <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0 0 0 4" Orientation="Horizontal">
                                        <Ellipse x:Name="PART_Mark" Fill="{DynamicResource Accent}" Width="8" Height="8" VerticalAlignment="Center">
                                            <Ellipse.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform ScaleX="0" ScaleY="0" CenterX="4" CenterY="4" />
                                                </TransformGroup>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <TextBlock x:Name="PART_Text" DataContext="{TemplateBinding Content}"
                                                Visibility="{Binding Converter={StaticResource NullOrEmptyStringToVisibilityConverter}, ConverterParameter=inverse}"
                                                Text="{Binding Converter={StaticResource ToUpperConverter}}" TextTrimming="CharacterEllipsis"
                                                Foreground="{TemplateBinding Foreground}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                FontFamily="{StaticResource FontFamily}" FontWeight="{StaticResource FontWeight}"
                                                FontSize="{StaticResource FontSize}" Margin="4 0 0 0">
                                            <TextBlock.RenderTransform>
                                                <TransformGroup>
                                                    <TranslateTransform X="-6" />
                                                </TransformGroup>
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                    </StackPanel>

                                    <Path x:Name="PART_Icon" Data="{TemplateBinding IconData}" Width="{TemplateBinding IconWidth}"
                                            Height="{TemplateBinding IconHeight}" Fill="{TemplateBinding Foreground}" Stretch="Uniform"
                                            HorizontalAlignment="Center" VerticalAlignment="Center" SnapsToDevicePixels="True" Opacity="0.36" />
                                </DockPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="PART_Icon" Property="Opacity" Value="1" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.12" To="1" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Icon"
                                                        Storyboard.TargetProperty="(UIElement.Opacity)" />
                                                <DoubleAnimation Duration="0:0:0.12" To="0" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Text"
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)" />
                                                <DoubleAnimation Duration="0:0:0.12" To="1" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Mark"
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" />
                                                <DoubleAnimation Duration="0:0:0.12" To="1" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Mark"
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.12" To="0.36" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Icon"
                                                        Storyboard.TargetProperty="(UIElement.Opacity)" />
                                                <DoubleAnimation Duration="0:0:0.12" To="-6" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Text"
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)" />
                                                <DoubleAnimation Duration="0:0:0.12" To="0" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Mark"
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" />
                                                <DoubleAnimation Duration="0:0:0.12" To="0" FillBehavior="HoldEnd" Storyboard.TargetName="PART_Mark"
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource ButtonTextHover}" />
                                    <Setter Property="Background" Value="{DynamicResource ButtonBackgroundHover}" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource ButtonTextPressed}" />
                                    <Setter Property="Background" Value="{DynamicResource ButtonBackgroundHover}" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource ButtonTextDisabled}" />
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="PART_Border" Property="BorderBrush" Value="{DynamicResource Accent}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="uc:QuickSwitchPresetsControl">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="uc:QuickSwitchPresetsControl">
                            <DockPanel>
                                <Menu VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Center"
                                        HorizontalContentAlignment="Center" Style="{StaticResource ButtonWithComboBoxWrapperMenu}" Name="PART_Menu"
                                        DockPanel.Dock="Bottom">
                                    <MenuItem HorizontalAlignment="Center" Style="{StaticResource UserPresetsControlMenuItem}"
                                            ItemsSource="{TemplateBinding SavedPresetsGrouped}" Background="Transparent" BorderThickness="0"
                                            HorizontalContentAlignment="Center" Margin="8 0 -2 0">
                                        <MenuItem.Header>
                                            <TextBlock Name="CurrentUserPresetTextBlock" TextTrimming="CharacterEllipsis"
                                                    Text="{Binding CurrentUserPreset.DisplayName, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ToUpperConverter}}"
                                                    HorizontalAlignment="Center" FontWeight="{StaticResource FontWeight}"
                                                    FontFamily="{StaticResource FontFamily}" FontSize="{StaticResource FontSize}" />
                                        </MenuItem.Header>
                                        <MenuItem.ItemContainerStyle>
                                            <Style TargetType="MenuItem" BasedOn="{StaticResource SpecialMenuItem}" />
                                        </MenuItem.ItemContainerStyle>
                                    </MenuItem>
                                </Menu>
                                <Path Data="{TemplateBinding IconData}" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"
                                        Fill="{DynamicResource ButtonText}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"
                                        SnapsToDevicePixels="True" />
                            </DockPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Changed" Value="True">
                                    <Setter Property="FontStyle" Value="Italic" TargetName="CurrentUserPresetTextBlock" />
                                </Trigger>
                                <Trigger Property="CurrentUserPreset" Value="{x:Null}">
                                    <Setter Property="Text" Value="Unsaved" TargetName="CurrentUserPresetTextBlock" />
                                    <Setter Property="FontStyle" Value="Italic" TargetName="CurrentUserPresetTextBlock" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <mui:ModernToggleButton x:Key="BlockHideDriveArms" IsChecked="{Binding HideArms, Source={x:Static hs:AcSettingsHolder.Video}}" Content="Hide arms"
                    IconData="{StaticResource HideIconData}">
                <mui:ModernToggleButton.ToolTip>Hide driver’s wheel</mui:ModernToggleButton.ToolTip>
            </mui:ModernToggleButton>
            <mui:ModernToggleButton x:Key="BlockHideSteeringWheel" IsChecked="{Binding HideSteeringWheel, Source={x:Static hs:AcSettingsHolder.Video}}"
                    Content="Hide wheel" IconData="{StaticResource HideIconData}" ToolTip="Hide steering wheel" />
            <mui:ModernToggleButton x:Key="BlockLockSteeringWheel" IsChecked="{Binding LockSteeringWheel, Source={x:Static hs:AcSettingsHolder.Video}}"
                    Content="Lock wheel" IconData="{StaticResource LockIconData}" ToolTip="Lock steering wheel" />
            <mui:ModernToggleButton x:Key="BlockLockOnboardCamera" IsChecked="{Binding WorldAligned, Source={x:Static hs:AcSettingsHolder.CameraOnboard}}"
                    Content="Lock camera" IconData="{StaticResource HorizontalIconData}" ToolTip="Lock onboard camera to horizon" />

            <mui:ModernToggleButton x:Key="BlockVirtualMirror" IsChecked="{Binding DisplayMirror, Source={x:Static hs:AcSettingsHolder.Gameplay}}"
                    Content="Mirror" IconData="{StaticResource MirrorIconData}" ToolTip="Display virtual mirror" />
            <mui:ModernToggleButton x:Key="BlockLeaderboard" IsChecked="{Binding DisplayLeaderboard, Source={x:Static hs:AcSettingsHolder.Gameplay}}"
                    Content="Leaderboard" IconData="{StaticResource LeaderboardIconData}" ToolTip="Display leaderboard" />
            <mui:ModernToggleButton x:Key="BlockDamage" IsChecked="{Binding DisplayDamage, Source={x:Static hs:AcSettingsHolder.Gameplay}}"
                    Content="Damage (UI)" IconData="{StaticResource AccidentIconData}" ToolTip="Display damage" />

            <mui:ModernToggleButton x:Key="BlockProximityIndicator" IsChecked="{Binding IsEnabled, Source={x:Static hs:AcSettingsHolder.ProximityIndicator}}"
                    Content="Nearest" IconData="{StaticResource ExpandIconData}" ToolTip="Show nearest opponents with proximity indicator" />
            <mui:ModernToggleButton x:Key="BlockDeveloperApps" IsChecked="{Binding DeveloperApps, Source={x:Static hs:AcSettingsHolder.System}}"
                    Content="Dev apps" IconData="{StaticResource RoadConeIconData}" ToolTip="Enable developer apps" />

            <uc:QuickSwitchPresetsControl x:Key="BlockUiPresets" UserPresetable="{x:Static hs:AcSettingsHolder.AppsPresets}"
                    IconData="{StaticResource ScreenIconData}" />

            <DockPanel x:Key="BlockControlsPresets" FocusVisualStyle="{x:Null}">
                <Menu VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                        Style="{StaticResource ButtonWithComboBoxWrapperMenu}" Name="PART_Menu" DockPanel.Dock="Bottom"
                        IsEnabled="{Binding PresetsReady, Source={x:Static conhs:ControlsPresets.Instance}}">
                    <MenuItem HorizontalAlignment="Center" Style="{StaticResource UserPresetsControlMenuItem}"
                            ItemsSource="{Binding Presets, Source={x:Static conhs:ControlsPresets.Instance}}" Background="Transparent" BorderThickness="0"
                            HorizontalContentAlignment="Center" Margin="8 0 -2 0">
                        <MenuItem.Header>
                            <TextBlock Name="CurrentUserPresetTextBlock" TextTrimming="CharacterEllipsis"
                                    HorizontalAlignment="Center" FontWeight="{StaticResource FontWeight}" FontFamily="{StaticResource FontFamily}"
                                    FontSize="{StaticResource FontSize}" DataContext="{x:Static hs:AcSettingsHolder.Controls}"
                                    Text="{Binding CurrentPresetName, TargetNullValue='Unsaved', Converter={StaticResource ToUpperConverter}}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentPresetChanged}" Value="True">
                                                <Setter Property="FontStyle" Value="Italic" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentPresetName}" Value="{x:Null}">
                                                <Setter Property="FontStyle" Value="Italic" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </MenuItem.Header>
                        <MenuItem.ItemContainerStyle>
                            <Style TargetType="MenuItem" BasedOn="{StaticResource SpecialMenuItem}" />
                        </MenuItem.ItemContainerStyle>
                    </MenuItem>
                </Menu>
                <Path Data="{StaticResource KeyboardIconData}" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"
                        Fill="{DynamicResource ButtonText}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" SnapsToDevicePixels="True" />
            </DockPanel>
        </ResourceDictionary>
    </DockPanel.Resources>

    <Rectangle DockPanel.Dock="Right" HorizontalAlignment="Right" Width="1" Fill="{DynamicResource Accent}" />

    <StackPanel Margin="16 16 8 16" VerticalAlignment="Center">
        <TextBlock Text="Quick Switches" Style="{StaticResource Heading2}" />

        <ItemsControl>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Items>
                <StaticResource ResourceKey="BlockHideDriveArms" />
                <StaticResource ResourceKey="BlockHideSteeringWheel" />
                <StaticResource ResourceKey="BlockLockSteeringWheel" />
                <StaticResource ResourceKey="BlockLockOnboardCamera" />

                <StaticResource ResourceKey="BlockVirtualMirror" />
                <!--<StaticResource ResourceKey="BlockLeaderboard" />
                <StaticResource ResourceKey="BlockDamage" />-->

                <StaticResource ResourceKey="BlockProximityIndicator" />
                <StaticResource ResourceKey="BlockDeveloperApps" />

                <StaticResource ResourceKey="BlockUiPresets" />
                <StaticResource ResourceKey="BlockControlsPresets" />
            </ItemsControl.Items>
        </ItemsControl>
    </StackPanel>
</DockPanel>
