<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ac="clr-namespace:AcManager.Controls" xmlns:mui="http://firstfloorsoftware.com/ModernUI">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="ac:AcObjectHeaderSection">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ac:AcObjectHeaderSection">
                    <TextBox Name="DisplayName" Text="{Binding AcObject.NameEditable, RelativeSource={RelativeSource TemplatedParent}}"
                            Style="{StaticResource TextBoxAsTextBlock.Heading2}"
                            FontStyle="{Binding AcObject.Changed, Converter={StaticResource BooleanToFontStyleConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                            mui:FocusAdvancement.AdvancesByEnterKey="True" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="ShowIcon" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ac:AcObjectHeaderSection">
                            <StackPanel Orientation="Horizontal">
                                <Grid x:Name="PART_IconImage" Width="24" Height="24" Margin="0 0 4 0">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                            Source="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}" />
                                </Grid>
                                <TextBox Style="{StaticResource TextBoxAsTextBlock.Heading2}" Padding="1 0 1 0" mui:FocusAdvancement.AdvancesByEnterKey="True"
                                        Text="{Binding AcObject.NameEditable, RelativeSource={RelativeSource TemplatedParent}}"
                                        FontStyle="{Binding AcObject.Changed, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToFontStyleConverter}}" />
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
