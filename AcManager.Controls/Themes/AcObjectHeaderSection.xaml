<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ac="clr-namespace:AcManager.Controls" xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:attached="clr-namespace:FirstFloor.ModernUI.Windows.Attached;assembly=FirstFloor.ModernUI">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="ac:AcObjectHeaderSection">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ac:AcObjectHeaderSection">
                    <TextBox Name="DisplayName" Text="{Binding AcObject.NameEditable, RelativeSource={RelativeSource TemplatedParent}}"
                            attached:FocusAdvancement.AdvancesByEnterKey="True" Style="{StaticResource TextBoxAsTextBlock.Heading2}"
                            FontStyle="{Binding AcObject.Changed, Converter={StaticResource BooleanToFontStyleConverter}, RelativeSource={RelativeSource TemplatedParent}}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="ShowIcon" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ac:AcObjectHeaderSection">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="PART_IconImage" Width="24" Height="24" Margin="0 0 4 0" Background="Transparent">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                            Source="{Binding IconSource, RelativeSource={RelativeSource TemplatedParent}}" />
                                </Border>
                                <TextBox Style="{StaticResource TextBoxAsTextBlock.Heading2}" Padding="1 0 1 0"
                                        attached:FocusAdvancement.AdvancesByEnterKey="True"
                                        Text="{Binding AcObject.NameEditable, RelativeSource={RelativeSource TemplatedParent}}"
                                        FontStyle="{Binding AcObject.Changed, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToFontStyleConverter}}" />
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ShowIcon" Value="True" />
                    <Condition Property="IconSource" Value="{x:Null}" />
                </MultiTrigger.Conditions>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ac:AcObjectHeaderSection">
                            <StackPanel Orientation="Horizontal">
                                <mui:BetterImage x:Name="PART_IconImage" RenderOptions.BitmapScalingMode="HighQuality" Width="24" Height="24" Margin="0 0 4 0"
                                        Filename="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}" />
                                <TextBox Style="{StaticResource TextBoxAsTextBlock.Heading2}" Padding="1 0 1 0"
                                        attached:FocusAdvancement.AdvancesByEnterKey="True"
                                        Text="{Binding AcObject.NameEditable, RelativeSource={RelativeSource TemplatedParent}}"
                                        FontStyle="{Binding AcObject.Changed, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToFontStyleConverter}}" />
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
