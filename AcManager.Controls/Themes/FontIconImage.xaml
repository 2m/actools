<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ac="clr-namespace:AcManager.Controls" xmlns:mui="http://firstfloorsoftware.com/ModernUI">
  <Style TargetType="ac:FontIconImage">
    <Setter Property="CropTransparentAreas" Value="True" />
    <Setter Property="StretchDirection" Value="DownOnly" />
    <Setter Property="Effect">
      <Setter.Value>
        <mui:AsTransparencyMask OverlayColor="{DynamicResource AccentColor}" />
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>