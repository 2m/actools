<DockPanel x:Class="AcManager.Controls.QuickSwitches.QuickSwitchesBlock" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:AcManager.Controls"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" xmlns:hs="clr-namespace:AcManager.Tools.Helpers;assembly=AcManager.Tools"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:uc="clr-namespace:AcManager.Controls.UserControls"
        xmlns:conhs="clr-namespace:AcManager.Controls.Helpers" xmlns:quickSwitches="clr-namespace:AcManager.Controls.QuickSwitches" mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300" Background="{DynamicResource WindowBackground}" Width="320">
    <DockPanel.Resources>
        <ResourceDictionary Source="QuickSwitchesWidgets.xaml" />
    </DockPanel.Resources>
    
    <Rectangle DockPanel.Dock="Right" HorizontalAlignment="Right" Width="1" Fill="{DynamicResource Accent}" />

    <StackPanel Margin="16 8 8 48" VerticalAlignment="Center">
        <TextBlock Text="Quick Switches" Style="{StaticResource Heading1}" />

        <ItemsControl>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Items>
                <StaticResource ResourceKey="WidgetExposure" />
                
                <StaticResource ResourceKey="WidgetHideDriveArms" />
                <StaticResource ResourceKey="WidgetHideSteeringWheel" />
                <StaticResource ResourceKey="WidgetLockSteeringWheel" />
                <StaticResource ResourceKey="WidgetLockOnboardCamera" />

                <StaticResource ResourceKey="WidgetVirtualMirror" />
                <StaticResource ResourceKey="WidgetLeaderboard" />
                <StaticResource ResourceKey="WidgetDamage" />

                <StaticResource ResourceKey="WidgetProximityIndicator" />
                <StaticResource ResourceKey="WidgetDeveloperApps" />
                <StaticResource ResourceKey="WidgetFreeCamera" />

                <StaticResource ResourceKey="WidgetUiPresets" />
                <StaticResource ResourceKey="WidgetControlsPresets" />
                
                <StaticResource ResourceKey="WidgetFieldOfView" />
            </ItemsControl.Items>
        </ItemsControl>
    </StackPanel>
</DockPanel>
